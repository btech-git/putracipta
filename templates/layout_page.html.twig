                    {% set frontRoute = 'app_home_page' %}
                    {% set mainRoute = user_menu.menuAttributes|map((attr, name) => user_menu.accessed(name) ? attr.route : '')|join('') %}
                    {% set currentRoute = app.request.attributes.get('_route') %}
                    {% if currentRoute != frontRoute and mainRoute != '' %}
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                {% set controllerNames = app.request.attributes.get("_controller")|split('\\')|last|split('::') %}
                                {% set controllerClass = controllerNames[0]|replace({'Controller': ''})|humanize %}
                                {% set controllerAction = controllerNames[1]|humanize %}
                                <li class="breadcrumb-item"><a href="{{ path(frontRoute) }}">Home</a></li>
                                <li class="breadcrumb-item text-capitalize {{ mainRoute == currentRoute ? 'active' : '' }}">
                                    {% if mainRoute == currentRoute %}
                                        {{ controllerClass }}
                                    {% else %}
                                        <a href="{{ path(mainRoute) }}">{{ controllerClass }}</a>
                                    {% endif %}
                                </li>
                                {% if mainRoute != currentRoute %}
                                    <li class="breadcrumb-item text-capitalize active">{{ controllerAction }}</li>
                                {% endif %}
                            </ol>
                        </nav>
                        <br />
                    {% endif %}
