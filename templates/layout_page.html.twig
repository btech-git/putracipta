    {% set actionNames = {'index': '*', 'new': '*', 'edit': '*', 'show': '*', 'head': '*', 'add': '*', 'approval': '*', 'new_repeat': '*'} %}

    <div class="container-fluid">
        <div class="row flex-nowrap">
            <div class="col-auto col-md-3 col-xl-2 px-sm-2 px-0 bg-dark">
                <div class="d-flex flex-column align-items-center align-items-sm-start px-3 pt-2 text-white min-vh-100">
                    <a href="{{ path('app_home_page') }}" class="d-flex align-items-center pb-3 mb-md-0 me-md-auto text-white text-decoration-none">
                        <span class="fs-5 d-none d-sm-inline">
                            <strong>PT Putracipta Karindomas</strong>
                        </span>
                    </a>
                    {% set activeClass = 'bg-light border border-3 border-primary rounded' %}
                    <div class="mb-sm-auto mb-0 overflow-auto" style="max-height: 512px">
                        <ul class="nav nav-pills flex-column align-items-center align-items-sm-start" id="menu" data-controller="scroll-element" data-scroll-element-active-class="{{ activeClass }}">
                            <li class="w-100 {% if app.request.attributes.get("_route") == 'app_home_page' %}{{ activeClass }}{% endif %}">
                                <a href="{{ path('app_home_page') }}" class="nav-link px-0 align-middle">
                                    <span class="ps-1 d-none d-sm-inline {% if app.request.attributes.get("_route") == 'app_home_page' %}text-dark{% else %}text-white{% endif %}">DASHBOARD</span>
                                </a>
                            </li>
                            {% set activeRoute = '' %}
                            {% set views = menu|map(v1 => app.request.attributes.get("_route")|replace(actionNames) in v1|map(v2 => v2[0]|replace(actionNames))) %}
                            {% for title, content in menu %}
                                <li>
                                    <a href="#submenu-{{ loop.index }}" data-bs-toggle="collapse" class="nav-link px-0 align-middle">
                                        <span class="ps-1 d-none d-sm-inline text-white">{{ title }}</span>
                                    </a>
                                    <ul class="collapse nav flex-column ms-1 {% if views[title] %}show{% endif %}" id="submenu-{{ loop.index }}" data-bs-parent="#menu">
                                        {% for label, item in content %}
                                            {% if item[1]|map(a => is_granted(a))|reduce((a, b) => a or b, false) %}
                                                {% set active = app.request.attributes.get("_route")|replace(actionNames) == item[0]|replace(actionNames) %}
                                                <li class="w-100 ps-3 {% if active %}{{ activeClass }}{% endif %}" data-scroll-element-target="item">
                                                    <a href="{{ path(item[0]) }}" class="nav-link px-0">
                                                        <span class="d-none d-sm-inline {% if active %}text-dark{% else %}text-white{% endif %}">{{ label }}</span>
                                                    </a>
                                                </li>
                                                {% if active %}
                                                    {% set activeRoute = item[0] %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
                            <li class="w-100 {% if app.request.attributes.get("_route") == 'app_report' %}{{ activeClass }}{% endif %}">
                                <a href="{{ path('app_report') }}" class="nav-link px-0 align-middle">
                                    <span class="ps-1 d-none d-sm-inline {% if app.request.attributes.get("_route") == 'app_report' %}text-dark{% else %}text-white{% endif %}">Report</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                    <div class="dropdown pb-4">
                        <a href="#" class="d-flex align-items-center text-white text-decoration-none dropdown-toggle" id="dropdownUser1" data-bs-toggle="dropdown" aria-expanded="false">
                            <i class="bi-person-circle" style="font-size: 2rem"></i>
                            &nbsp;
                            <span class="d-none d-sm-inline mx-1">{{ app.user.username|default }}</span>
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark text-small shadow">
                            {#<li><a class="dropdown-item" href="#">New project...</a></li>#}
                            {#<li><a class="dropdown-item" href="#">Profile</a></li>#}
                            <li>
                                <hr class="dropdown-divider">
                            </li>
                            <li><a class="dropdown-item" href="{{ logout_path('main') }}">Logout</a></li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="col-auto col-md-9 col-xl-10 py-3">
                <div class="container-fluid">
                    <div class="row d-print-none">
                        <div class="col d-flex justify-content-start">
                            {% block tooltip %}
                                <h4>{{ block('title') }}</h4>
                            {% endblock %}
                        </div>
                        <div class="col d-flex justify-content-end">
                            <div class="d-gap">
                                {% block toolbar %}{% endblock %}
                            </div>
                        </div>
                    </div>
                    <hr />
                    {% if app.request.attributes.get("_route") != 'app_home_page' and app.request.attributes.get("_route") != 'app_report' %}
                        <nav style="--bs-breadcrumb-divider: '>';" aria-label="breadcrumb">
                            <ol class="breadcrumb">
                                {% set controllerNames = app.request.attributes.get("_controller")|split('\\')|last|split('::') %}
                                {% set controllerClass = controllerNames[0]|replace({'Controller': ''})|humanize %}
                                {% set controllerAction = controllerNames[1]|humanize %}
                                <li class="breadcrumb-item"><a href="{{ path('app_home_page') }}">Home</a></li>
                                <li class="breadcrumb-item text-capitalize {{ activeRoute == app.request.attributes.get("_route") ? 'active' : '' }}">
                                    {% if activeRoute == app.request.attributes.get("_route") %}
                                        {{ controllerClass }}
                                    {% else %}
                                        <a href="{{ path(activeRoute) }}">{{ controllerClass }}</a>
                                    {% endif %}
                                </li>
                                {% if activeRoute != app.request.attributes.get("_route") %}
                                    <li class="breadcrumb-item text-capitalize active">{{ controllerAction }}</li>
                                {% endif %}
                            </ol>
                        </nav>
                        <br />
                    {% endif %}
                    {% block content %}{% endblock %}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
