                                                    </a>
                                                </li>
                                                {% if active %}
                                                    {% set mainRoute = item[0] %}
                                                {% endif %}
                                            {% endif %}
                                        {% endfor %}
                                    </ul>
                                </li>
                            {% endfor %}
