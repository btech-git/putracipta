{{ form_start(form) }}
    <div class="row">
        <div class="col">
            {{ form_row(form.company) }}
            {{ form_row(form.addressInvoice) }}
            {{ form_row(form.phone) }}
            {{ form_row(form.email) }}
            {{ form_row(form.taxNumber) }}
        </div>
        <div class="col">
            {{ form_row(form.paymentTerm) }}
            {{ form_row(form.quantityTolerancePercentage) }}
            {{ form_row(form.isBondedZone) }}
            {{ form_row(form.account) }}
            {{ form_row(form.note) }}
            {{ form_row(form.isInactive) }}
        </div>
    </div>
        
    <fieldset class="border border-secondary rounded mb-3 p-3">
        <legend class="float-none w-auto text-dark px-1">Details</legend>
        <div class="row">
            <div class="col">
                <div class="mb-3">
                    <span id="address-delivery-counter" class="d-none">
                        {% if customer.addressDelivery5 != '' %}
                            5
                        {% elseif customer.addressDelivery4 != '' %}
                            4
                        {% elseif customer.addressDelivery3 != '' %}
                            3
                        {% elseif customer.addressDelivery2 != '' %}
                            2
                        {% else %}
                            1
                        {% endif %}
                    </span>
                    <button type="button" class="btn btn-sm btn-outline-dark"
                            data-controller="dom-element"
                            data-action="dom-element#bind"
                            data-dom-element-bind-specifications-param="{{ [
                                {'destinationsTarget': '#address-delivery-counter', 'action': 'putHtmlContent', 'descriptor': {'mode': 'replace', 'content': 'parseInt($destinations[0].textContent) + 1'}, 'condition': 'parseInt($destination.textContent) < 5'},
                                {'destinationsTarget': '#address-delivery-2-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 2'},
                                {'destinationsTarget': '#address-delivery-3-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 3'},
                                {'destinationsTarget': '#address-delivery-4-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 4'},
                                {'destinationsTarget': '#address-delivery-5-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 5'},
                            ]|json_encode }}">Add Address</button>
                    <button type="button" class="btn btn-sm btn-outline-dark"
                            data-controller="dom-element"
                            data-action="dom-element#bind"
                            data-dom-element-bind-specifications-param="{{ [
                                {'destinationsTarget': '#' ~ form.addressDelivery5.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 5'},
                                {'destinationsTarget': '#address-delivery-5-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 5'},
                                {'destinationsTarget': '#' ~ form.addressDelivery4.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 4'},
                                {'destinationsTarget': '#address-delivery-4-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 4'},
                                {'destinationsTarget': '#' ~ form.addressDelivery3.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 3'},
                                {'destinationsTarget': '#address-delivery-3-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 3'},
                                {'destinationsTarget': '#' ~ form.addressDelivery2.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 2'},
                                {'destinationsTarget': '#address-delivery-2-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#address-delivery-counter").textContent) === 2'},
                                {'destinationsTarget': '#address-delivery-counter', 'action': 'putHtmlContent', 'descriptor': {'mode': 'replace', 'content': 'parseInt($destinations[0].textContent) - 1'}, 'condition': 'parseInt($destination.textContent) > 1'},
                            ]|json_encode }}">Remove Address</button>
                    <span>&nbsp;(** Maksimum 5 alamat)</span>
                </div>
                <div id="address-delivery-1-container">
                    {{ form_row(form.addressDelivery1) }}
                </div>
                <div id="address-delivery-2-container" {% if customer.addressDelivery2 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.addressDelivery2) }}
                </div>
                <div id="address-delivery-3-container" {% if customer.addressDelivery3 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.addressDelivery3) }}
                </div>
                <div id="address-delivery-4-container" {% if customer.addressDelivery4 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.addressDelivery4) }}
                </div>
                <div id="address-delivery-5-container" {% if customer.addressDelivery5 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.addressDelivery5) }}
                </div>
            </div>

            <div class="col">
                <div class="mb-3">
                    <span id="name-counter" class="d-none">
                        {% if customer.name5 != '' %}
                            5
                        {% elseif customer.name4 != '' %}
                            4
                        {% elseif customer.name3 != '' %}
                            3
                        {% elseif customer.name2 != '' %}
                            2
                        {% else %}
                            1
                        {% endif %}
                    </span>
                    <button type="button" class="btn btn-sm btn-outline-dark"
                            data-controller="dom-element"
                            data-action="dom-element#bind"
                            data-dom-element-bind-specifications-param="{{ [
                                {'destinationsTarget': '#name-counter', 'action': 'putHtmlContent', 'descriptor': {'mode': 'replace', 'content': 'parseInt($destinations[0].textContent) + 1'}, 'condition': 'parseInt($destination.textContent) < 5'},
                                {'destinationsTarget': '#name-2-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 2'},
                                {'destinationsTarget': '#name-3-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 3'},
                                {'destinationsTarget': '#name-4-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 4'},
                                {'destinationsTarget': '#name-5-container', 'action': 'removeClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 5'},
                            ]|json_encode }}">Add PIC</button>
                    <button type="button" class="btn btn-sm btn-outline-dark"
                            data-controller="dom-element"
                            data-action="dom-element#bind"
                            data-dom-element-bind-specifications-param="{{ [
                                {'destinationsTarget': '#' ~ form.name5.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 5'},
                                {'destinationsTarget': '#name-5-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 5'},
                                {'destinationsTarget': '#' ~ form.name4.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 4'},
                                {'destinationsTarget': '#name-4-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 4'},
                                {'destinationsTarget': '#' ~ form.name3.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 3'},
                                {'destinationsTarget': '#name-3-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 3'},
                                {'destinationsTarget': '#' ~ form.name2.vars.id, 'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '""'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 2'},
                                {'destinationsTarget': '#name-2-container', 'action': 'addClass', 'descriptor': {'name': 'd-none'}, 'condition': 'parseInt(document.querySelector("#name-counter").textContent) === 2'},
                                {'destinationsTarget': '#name-counter', 'action': 'putHtmlContent', 'descriptor': {'mode': 'replace', 'content': 'parseInt($destinations[0].textContent) - 1'}, 'condition': 'parseInt($destination.textContent) > 1'},
                            ]|json_encode }}">Remove PIC</button>
                    <span>&nbsp;(** Maksimum 5 PIC)</span>
                </div>
                <div id="name-1-container">
                    {{ form_row(form.name) }}
                </div>
                <div id="name-2-container" {% if customer.name2 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.name2) }}
                </div>
                <div id="name-3-container" {% if customer.name3 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.name3) }}
                </div>
                <div id="name-4-container" {% if customer.name4 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.name4) }}
                </div>
                <div id="name-5-container" {% if customer.name5 == '' %}class="d-none"{% endif %}>
                    {{ form_row(form.name5) }}
                </div>
            </div>
        </div>
    </fieldset>
    <div class="d-grid">
        <div class="row">
            <div class="col text-center">
                <a class="btn btn-danger" href="{{ path('app_master_customer_index') }}"
                        data-controller="dom-element"
                        data-action="dom-element#confirm"
                        data-dom-element-confirm-message-param="Are you sure you want to cancel this transaction?">
                    Cancel
                </a>
                <button class="btn btn-success"
                        data-controller="dom-element"
                        data-action="dom-element#confirm"
                        data-dom-element-confirm-message-param="Are you sure you want to save this transaction?">
                    Save
                </button>
            </div>
        </div>
        <input type="hidden" name="{{ idempotent_token_name() }}" value="{{ idempotent_token_value() }}" />
    </div>
{{ form_end(form) }}
