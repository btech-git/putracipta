{% extends 'layout_page.html.twig' %}

{% block title 'Show Customer' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_customer_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_customer_edit', {'id': customer.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Company</th>
                <td>{{ customer.company }}</td>
            </tr>
            <tr>
                <th>PIC 1</th>
                <td>{{ customer.name }}</td>
            </tr>
            {% if (customer.name2 != '') %}
                <tr>
                    <th>PIC 2</th>
                    <td>{{ customer.name2 }}</td>
                </tr>
            {% endif %}
            {% if (customer.name3 != '') %}
                <tr>
                    <th>PIC 3</th>
                    <td>{{ customer.name3 }}</td>
                </tr>
            {% endif %}
            {% if (customer.name4 != '') %}
                <tr>
                    <th>PIC 4</th>
                    <td>{{ customer.name4 }}</td>
                </tr>
            {% endif %}
            {% if (customer.name5 != '') %}
                <tr>
                    <th>PIC 5</th>
                    <td>{{ customer.name5 }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Alamat Kirim 1</th>
                <td>{{ customer.addressDelivery1 }}</td>
            </tr>
            {% if (customer.addressDelivery2 != '') %}
                <tr>
                    <th>Alamat Kirim 2</th>
                    <td>{{ customer.addressDelivery2 }}</td>
                </tr>
            {% endif %}
            {% if (customer.addressDelivery3 != '') %}
                <tr>
                    <th>Alamat Kirim 3</th>
                    <td>{{ customer.addressDelivery3 }}</td>
                </tr>
            {% endif %}
            {% if (customer.addressDelivery4 != '') %}
                <tr>
                    <th>Alamat Kirim 4</th>
                    <td>{{ customer.addressDelivery4 }}</td>
                </tr>
            {% endif %}
            {% if (customer.addressDelivery5 != '') %}
                <tr>
                    <th>Alamat Kirim 5</th>
                    <td>{{ customer.addressDelivery5 }}</td>
                </tr>
            {% endif %}
            <tr>
                <th>Alamat Penagihan</th>
                <td>{{ customer.addressInvoice }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>NPWP</th>
                <td>{{ customer.taxNumber }}</td>
            </tr>
            <tr>
                <th>TOP (hari)</th>
                <td>{{ customer.paymentTerm }}</td>
            </tr>
            <tr>
                <th>Kawasan Berikat 017?</th>
                <td>{{ customer.isBondedZone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ customer.note }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ customer.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
            
    <hr />
    
    <legend class="float-none w-auto text-dark px-1">Product List</legend>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for product in customer.products %}
                <tr>
                    <td>{{ product.code }}</td>
                    <td>{{ product.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    <hr />
    
    <legend class="float-none w-auto text-dark px-1">Pisau Diecut List</legend>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for diecutKnife in customer.diecutKnives %}
                <tr>
                    <td>{{ diecutKnife.code }}</td>
                    <td>{{ diecutKnife.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {#{{ include('master/customer/_delete_form.html.twig') }}#}
{% endblock %}
