{% extends 'layout_page.html.twig' %}

{% block title 'Show Customer' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_customer_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_customer_edit', {'id': customer.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ customer.code }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ customer.company }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ customer.name }}</td>
            </tr>
            <tr>
                <th>Address Delivery</th>
                <td>{{ customer.addressDelivery }}</td>
            </tr>
            <tr>
                <th>Address Invoice</th>
                <td>{{ customer.addressInvoice }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ customer.phone }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ customer.email }}</td>
            </tr>
            <tr>
                <th>Tax Number</th>
                <td>{{ customer.taxNumber }}</td>
            </tr>
            <tr>
                <th>Payment Term (days)</th>
                <td>{{ customer.paymentTerm }}</td>
            </tr>
            <tr>
                <th>Kawasan Berikat</th>
                <td>{{ customer.isBondedZone ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ customer.note }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ customer.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
            
            <hr />
    <legend class="float-none w-auto text-dark px-1">Product List</legend>
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>Code</th>
                <th>Name</th>
            </tr>
        </thead>
        <tbody>
            {% for product in customer.products %}
                <tr>
                    <td>{{ product.code }}</td>
                    <td>{{ product.name }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>

    {{ include('master/customer/_delete_form.html.twig') }}
{% endblock %}
