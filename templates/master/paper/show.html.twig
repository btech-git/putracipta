{% extends 'layout_page.html.twig' %}

{% block title 'Show Paper' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_paper_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_paper_edit', {'id': paper.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ paper.codeNumber }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ paper.paperNameSizeCombination }}</td>
            </tr>
            <tr>
                <th>Panjang</th>
                <td>{{ paper.length }}</td>
            </tr>
            <tr>
                <th>Lebar</th>
                <td>{{ paper.width }}</td>
            </tr>
            <tr>
                <th>Satuan</th>
                <td>{{ paper.unit.name }}</td>
            </tr>
            <tr>
                <th>Pricing Mode</th>
                <td>{{ paper.pricingMode }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ paper.note }}</td>
            </tr>
            <tr>
                <th>Inactive</th>
                <td>{{ paper.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {#{{ include('master/paper/_delete_form.html.twig') }}#}
{% endblock %}
