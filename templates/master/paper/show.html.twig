{% extends 'layout_page.html.twig' %}

{% block title 'Show Paper' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_paper_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_paper_edit', {'id': paper.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ paper.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ paper.name }}</td>
            </tr>
            <tr>
                <th>Length</th>
                <td>{{ paper.length }}</td>
            </tr>
            <tr>
                <th>Width</th>
                <td>{{ paper.width }}</td>
            </tr>
            <tr>
                <th>Weight</th>
                <td>{{ paper.weight }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ paper.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('master/paper/_delete_form.html.twig') }}
{% endblock %}
