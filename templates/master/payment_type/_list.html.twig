{% import 'app/data_grid.html.twig' as grid %}

{{ grid.form(form) }}

{{ grid.info(form, count, paymentTypes) }}

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-primary" {{ grid.sort_link(form) }}>
                <th role="button" {{ grid.sort_link_item(form, 'isInactive') }}>
                    Is Inactive {{ grid.sort_char(form.sort.isInactive.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'name') }}>
                    Name {{ grid.sort_char(form.sort.name.vars.value) }}
                </th>
                <th></th>
            </tr>
            <tr class="table-light" {{ grid.filter_link(form) }}>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'isInactive') }} value="{{ form.filter.isInactive.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'name') }} value="{{ form.filter.name.1.vars.value }}" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for paymentType in paymentTypes %}
                <tr>
                    <td>{{ paymentType.isInactive ? 'Yes' : 'No' }}</td>
                    <td>{{ paymentType.name }}</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="{{ path('app_master_payment_type_show', {'id': paymentType.id}) }}">Show</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('app_master_payment_type_edit', {'id': paymentType.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ grid.navigation(form, count, paymentTypes) }}
