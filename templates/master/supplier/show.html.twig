{% extends 'layout_page.html.twig' %}

{% block title 'Show Supplier' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_master_supplier_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_master_supplier_edit', {'id': supplier.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code</th>
                <td>{{ supplier.code }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ supplier.name }}</td>
            </tr>
            <tr>
                <th>Company</th>
                <td>{{ supplier.company }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ supplier.address }}</td>
            </tr>
            <tr>
                <th>Phone</th>
                <td>{{ supplier.phone }}</td>
            </tr>
            <tr>
                <th>Fax</th>
                <td>{{ supplier.fax }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ supplier.email }}</td>
            </tr>
            <tr>
                <th>Tax Number</th>
                <td>{{ supplier.taxNumber }}</td>
            </tr>
            <tr>
                <th>Payment Term (days)</th>
                <td>{{ supplier.paymentTerm }}</td>
            </tr>
            <tr>
                <th>Certification</th>
                <td>{{ supplier.certification }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ supplier.note }}</td>
            </tr>
            <tr>
                <th>Is Inactive</th>
                <td>{{ supplier.isInactive ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('master/supplier/_delete_form.html.twig') }}
{% endblock %}
