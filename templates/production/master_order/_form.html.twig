<div data-controller="event-emitter json-loader"
     data-action="data-table:select->event-emitter#forward"
     data-event-emitter-attributes-list-param="{{ {'data-table:select': 'id'}|json_encode }}"
     data-json-loader-url-value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': 'json'})) }}"
     data-json-loader-method-value="POST"
     data-json-loader-form-target-value="{{ "form[name=#{form.vars.name}]" }}">

    {{ form_start(form) }}
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Header</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.productionDate, {'label': 'Tanggal MO', 'attr': {'data-controller': 'flatpickr-element'}}) }}
                    {{ form_row(form.deliveryDate, {'label': 'Tanggal Kirim', 'attr': {'data-controller': 'flatpickr-element'}}) }}
                    {{ form_row(form.printingMachine, {'label': 'Mesin Cetak'}) }}
                    {{ form_row(form.designCode, {'label': 'Kode Design'}) }}
                    {{ form_row(form.quantityOrder, {'label': 'Quantity Order'}) }}
                    {{ form_row(form.quantityStock, {'label': 'Stock / Kekurangan (pcs)'}) }}
                    {{ form_row(form.color, {'label': 'Warna / Pantone'}) }}
                    {{ form_row(form.finishing, {'label': 'Finishing'}) }}
                    {{ form_row(form.quantityPrinting, {'label': 'Jumlah Up Cetak'}) }}
                    <label class="form-label">Ukuran Mountage / Kris (cm)</label>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.mountageSizeLength, {'label': false}) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.mountageSizeWidth, {'label': false}) }}
                        </div>
                    </div>
                    {{ form_row(form.isUsingHotStamping, {'label': 'Hot Stamping'}) }}
                    {{ form_row(form.printingStatus, {'label': 'Status Cetakan'}) }}
                    {{ form_row(form.printingStatusData, {'label': false}) }}
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="{{ form.saleOrderDetail.vars.id }}-text" class="form-label">PO Customer #</label>
                        {{ form_row(form.saleOrderDetail, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'sale-order-detail-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.saleOrderDetailId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.saleOrderDetail.vars.id }}-text" class="form-control {% if not form.saleOrderDetail.vars.valid %}is-invalid{% endif %}" value="{{ masterOrder.saleOrderDetail.saleOrderHeader.codeNumber|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#sale-order-detail-dialog"
                               data-controller="dom-element"
                               data-action="sale-order-detail-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.saleOrderHeaderCodeNumber'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.saleOrderDetail) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanggal PO</label>
                        <input type="text" class="form-control" value="{{ masterOrder.saleOrderDetail.saleOrderHeader.transactionDate|default ? masterOrder.saleOrderDetail.saleOrderHeader.transactionDate|date('d M Y') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="sale-order-detail-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.saleOrderHeaderDate'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Customer</label>
                        <input type="text" class="form-control" value="{{ masterOrder.saleOrderDetail.saleOrderHeader.customer.company|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="sale-order-detail-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.customerCompany'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kode Produk</label>
                        <input type="text" class="form-control" value="{{ masterOrder.product.code|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="sale-order-detail-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productCode'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nama Produk</label>
                        <input type="text" class="form-control" value="{{ masterOrder.product.name|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="sale-order-detail-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productName'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label for="{{ form.paper.vars.id }}-text" class="form-label">Material Kertas</label>
                        {{ form_row(form.paper, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'paper-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.paperId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.paper.vars.id }}-text" class="form-control {% if not form.paper.vars.valid %}is-invalid{% endif %}" value="{{ masterOrder.paper.name|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#paper-dialog"
                               data-controller="dom-element"
                               data-action="paper-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.paperName'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.paper) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kode Kertas</label>
                        <input type="text" class="form-control" value="{{ masterOrder.paper.code|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="paper-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.paperCode'}},
                               ]|json_encode }}" />
                    </div>
                    {{ form_row(form.dimensionLength, {'label': 'Ukuran Jadi (mm)'}) }}
                    {{ form_row(form.dimensionWidth, {'label': false}) }}
                    {{ form_row(form.dimensionHeight, {'label': false}) }}
                    {{ form_row(form.dieCutBlade, {'label': 'Pisau Die Cut'}) }}
                    {{ form_row(form.dieCutBladeData, {'label': false}) }}
                    {{ form_row(form.dieCutBladeNumber, {'label': 'No. Pisau Diecut'}) }}
                    {{ form_row(form.dieLineFilmNumber, {'label': 'No. Film Dieline Diecut'}) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Kebutuhan Material Kertas</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.insitPercentage, {'label': '% Insit'}) }}
                    {{ form_row(form.quantityPaper, {'label': 'Quantity Kertas (Rim)'}) }}
                    {{ form_row(form.paperMountage, {'label': 'Mountage Kertas (Up)'}) }}
                    {{ form_row(form.paperPlanoLength, {'label': 'Uk Plano Kertas'}) }}
                    {{ form_row(form.paperPlanoWidth, {'label': 'Uk Plano Kertas'}) }}
                    {{ form_row(form.cuttingLengthSize1, {'label': 'Uk Potong 1'}) }}
                    {{ form_row(form.cuttingWidthSize1, {'label': 'Uk Potong 1'}) }}
                    {{ form_row(form.cuttingLengthSize2, {'label': 'Uk Potong 2'}) }}
                    {{ form_row(form.cuttingWidthSize2, {'label': 'Uk Potong 2'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.paperRequirement, {'label': 'Kebutuhan (dreek)'}) }}
                    {{ form_row(form.printingInsit, {'label': 'Insit cetak (dreek)'}) }}
                    {{ form_row(form.paperTotal, {'label': 'Total Kertas (dreek)'}) }}
                    <div class="mb-3">
                        <label for="{{ form.purchaseOrderPaperHeader.vars.id }}-text" class="form-label">PO Kertas #</label>
                        {{ form_row(form.purchaseOrderPaperHeader, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'purchase-order-paper-header-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].purchaseOrderPaperHeaderId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.purchaseOrderPaperHeader.vars.id }}-text" class="form-control {% if not form.purchaseOrderPaperHeader.vars.valid %}is-invalid{% endif %}" value="{{ masterOrder.purchaseOrderPaperHeader.codeNumber|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#purchase-order-paper-header-dialog"
                               data-controller="dom-element"
                               data-action="purchase-order-paper-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].purchaseOrderPaperHeaderCodeNumber'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.purchaseOrderPaperHeader) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanggal PO</label>
                        <input type="text" class="form-control" value="{{ masterOrder.purchaseOrderPaperHeader.transactionDate|default ? masterOrder.purchaseOrderPaperHeader.transactionDate|date('d M Y') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="purchase-order-paper-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].purchaseOrderPaperHeaderTransactionDate'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Supplier</label>
                        <input type="text" class="form-control" value="{{ masterOrder.purchaseOrderPaperHeader.supplier.company|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="purchase-order-paper-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].supplierCompany'}},
                               ]|json_encode }}" />
                    </div>
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Estimasi Tinta / Chemical</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.inkCyanPercentage, {'label': 'Cyan %'}) }}
                    {{ form_row(form.inkCyanWeight, {'label': 'Cyan kg'}) }}
                    {{ form_row(form.inkMagentaPercentage, {'label': 'Magenta %'}) }}
                    {{ form_row(form.inkMagentaWeight, {'label': 'Magenta kg'}) }}
                    {{ form_row(form.inkYellowPercentage, {'label': 'Yellow %'}) }}
                    {{ form_row(form.inkYellowWeight, {'label': 'Yellow kg'}) }}
                    {{ form_row(form.inkBlackPercentage, {'label': 'Black %'}) }}
                    {{ form_row(form.inkBlackWeight, {'label': 'Black kg'}) }}
                    {{ form_row(form.inkOpvPercentage, {'label': 'OPV / WB / UV %'}) }}
                    {{ form_row(form.inkOpvWeight, {'label': 'OPV / WB / UV kg'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.inkK1Percentage, {'label': 'K-1 %'}) }}
                    {{ form_row(form.inkK1Weight, {'label': 'K-1 kg'}) }}
                    {{ form_row(form.inkK2Percentage, {'label': 'K-2 %'}) }}
                    {{ form_row(form.inkK2Weight, {'label': 'K-2 kg'}) }}
                    {{ form_row(form.inkK3Percentage, {'label': 'K-3 %'}) }}
                    {{ form_row(form.inkK3Weight, {'label': 'K-3 kg'}) }}
                    {{ form_row(form.inkK4Percentage, {'label': 'K-4 %'}) }}
                    {{ form_row(form.inkK4Weight, {'label': 'K-4 kg'}) }}
                    {{ form_row(form.inkLaminatingSize, {'label': 'Laminating cm'}) }}
                    {{ form_row(form.inkLaminatingQuantity, {'label': 'Laminating roll'}) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Estimasi Packaging</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.packagingGlueQuantity, {'label': 'Lem (cm/pcs)'}) }}
                    {{ form_row(form.packagingGlueWeight, {'label': 'Lem (kg)'}) }}
                    {{ form_row(form.packagingRubberQuantity, {'label': 'Karet (pcs/ikat)'}) }}
                    {{ form_row(form.packagingRubberWeight, {'label': 'Karet (pcs)'}) }}
                    {{ form_row(form.packagingPaperQuantity, {'label': 'Kertas Packing (pcs/pack)'}) }}
                    {{ form_row(form.packagingPaperWeight, {'label': 'Kertas Packing (Lbr)'}) }}
                    {{ form_row(form.packagingBoxQuantity, {'label': 'Dus (pcs/dus)'}) }}
                    {{ form_row(form.packagingBoxWeight, {'label': 'Dus (pcs)'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.packagingTapeLargeQuantity, {'label': 'Lakban >besar (cm/pack)'}) }}
                    {{ form_row(form.packagingTapeLargeSize, {'label': 'Lakban >besar (roll)'}) }}
                    {{ form_row(form.packagingTapeSmallQuantity, {'label': 'Lakban >kecil (cm/pack)'}) }}
                    {{ form_row(form.packagingTapeSmallSize, {'label': 'Lakban >kecil (roll)'}) }}
                    {{ form_row(form.packagingPlasticQuantity, {'label': 'Plastik (cm2/pack)'}) }}
                    {{ form_row(form.packagingPlasticSize, {'label': 'Plastik (m2)'}) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="row">
                <div class="col">
                    {{ form_row(form.workOrderDistribution, {'label': 'Distribusi WO'}) }}
                </div>
                
                <div class="col">
                </div>
            </div>
                
            <div class="row">
                <div class="col">
                    {{ form_row(form.note, {'label': 'Catatan'}) }}
                </div>
            </div>
        </fieldset>

        <div class="d-grid">
            <button class="btn btn-success"
                    data-controller="dom-element"
                    data-action="dom-element#confirm"
                    data-dom-element-confirm-message-param="Are you sure you want to save this transaction?">
                Save
            </button>
        </div>
    {{ form_end(form) }}

    {% import 'app/bootstrap_dialog.html.twig' as dialog %}

    {{ dialog.start('sale-order-detail-dialog', 'Customer Order List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_sale_order_detail__list') }}"
             data-html-loader-auto-load-value="true">
        </div>
    {{ dialog.end() }}

    {{ dialog.start('paper-dialog', 'Paper List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_paper__list') }}"
             data-html-loader-auto-load-value="true">
        </div>
    {{ dialog.end() }}

    {{ dialog.start('purchase-order-paper-header-dialog', 'PO Paper List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_purchase_order_paper_header__list') }}"
             data-html-loader-auto-load-value="true">
        </div>
    {{ dialog.end() }}
</div>
