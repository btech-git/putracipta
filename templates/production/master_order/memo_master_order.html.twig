{% extends 'base.html.twig' %}

{% block title 'Memo' %}

{% block body %}
    <div class="memo">
        <div class="note" style="font-size: 10px">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label"><img id="logo" alt="logo" max-height="300px" src="{{ asset('images/Logo.jpg') }}"></div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label" style="font-size: 14px; text-align: center">FORMULIR</div>
                        </div>
                        <div class="row">
                            <div class="cell label" style="font-size: 18px; text-align: center">MASTER ORDER</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                                <div class="cell label">No Dokumen</div>
                                <div class="cell label">:</div>
                                <div class="cell label">F/PCK/PPIC/8.1-1</div>
                        </div>
                        <div class="row">
                                <div class="cell label">Revisi</div>
                                <div class="cell label">:</div>
                                <div class="cell label">0</div>
                        </div>
                        <div class="row">
                                <div class="cell label">Tanggal</div>
                                <div class="cell label">:</div>
                                <div class="cell label"></div>
                        </div>
                        <div class="row">
                                <div class="cell label">Halaman</div>
                                <div class="cell label">:</div>
                                <div class="cell label">1 dari 1</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <hr />
        
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Mesin Cetak:</div>
                            <div class="cell value">{{ masterOrder.printingMachine|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Nama Customer</div>
                            <div class="cell value">{{ masterOrder.customer.company|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Kode Design</div>
                            <div class="cell value">{{ masterOrder.designCode|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Nama Produk</div>
                            <div class="cell value">{{ masterOrder.product.name|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Kode Produk</div>
                            <div class="cell value">{{ masterOrder.product.code|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Quantity Order</div>
                            <div class="cell value">{{ masterOrder.quantityOrder|default }} pcs</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Stock/Kekurangan</div>
                            <div class="cell value">{{ masterOrder.quantityStock }} / {{ masterOrder.quantityProduction }} pcs</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Ukuran Jadi</div>
                            <div class="cell value">{{ masterOrder.dimensionLength }} x {{ masterOrder.dimensionWidth }} x {{ masterOrder.dimensionHeight }} mm</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Warna / Pantone</div>
                            <div class="cell value">{{ masterOrder.color }} / {{ masterOrder.pantone }} + {{ masterOrder.colorPantoneAdditional }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Finishing</div>
                            <div class="cell value">{{ masterOrder.finishing|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Material Kertas</div>
                            <div class="cell value">{{ masterOrder.paper.paperNameSizeCombination|default }} Gram</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Jumlah Up Cetak</div>
                            <div class="cell value">{{ masterOrder.quantityPrinting }} & {{ masterOrder.quantityPrinting2 }} Up/s</div>
                        </div>
                    </div>
                </div>
                        
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">No MO</div>
                            <div class="cell value">{{ masterOrder.getCodeNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">No PO</div>
                            <div class="cell value">{{ masterOrder.saleOrderDetail.saleOrderHeader.referenceNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal MO</div>
                            <div class="cell value">{{ masterOrder.productionDate ? masterOrder.productionDate|date('d M Y') : '' }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal PO</div>
                            <div class="cell value">{{ masterOrder.saleOrderDetail.saleOrderHeader.transactionDate|default ? masterOrder.saleOrderDetail.saleOrderHeader.transactionDate|date('d M Y') }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal Kirim</div>
                            <div class="cell value">{{ masterOrder.deliveryDate|default ? masterOrder.deliveryDate|date('d M Y') }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Status Cetakan</div>
                            <div class="cell value">{{ masterOrder.printingStatus }} : {{ masterOrder.printingStatusData }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Pisau Die Cut</div>
                            <div class="cell value">{{ masterOrder.dieCutBlade }} : {{ masterOrder.dieCutBladeData }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">No. Pisau Die Cut</div>
                            <div class="cell value">{{ masterOrder.dieCutBladeNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">No. Film Dieline Die Cut</div>
                            <div class="cell value">{{ masterOrder.dieLineFilmNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Ukuran Mountage/Kris</div>
                            <div class="cell value">{{ masterOrder.mountageSizeLength }} x {{ masterOrder.mountageSizeWidth }} cm</div>
                        </div>
                    </div>
                </div>
            </div>
                     
            <div class="table full">
                <div class="row">
                    <div class="cell label">Model Layout : </div>
                    <div><img id="upload" width="128px" alt="Layout Model Image" src="{{ asset('uploads/master-order/' ~ masterOrder.id ~ '.' ~ masterOrder.layoutModelFileExtension) }}"></div>
                </div>
            </div>

            <h4><u>Kebutuhan Material Kertas</u></h4>
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">% Insit</div>
                            <div class="cell value">{{ masterOrder.insitPercentage|default }}%</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Quantity Kertas</div>
                            <div class="cell value">{{ masterOrder.quantityPaper|default }} Rim</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Mountage Kertas</div>
                            <div class="cell value">{{ masterOrder.paperMountage|default }} Up</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Uk Plano Kertas</div>
                            <div class="cell value">{{ masterOrder.paperPlanoLength }} x {{ masterOrder.paperPlanoWidth }} cm</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Uk Potong 1</div>
                            <div class="cell value">{{ masterOrder.cuttingLengthSize1 }} x {{ masterOrder.cuttingWidthSize1 }} cm</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Uk Potong 2</div>
                            <div class="cell value">{{ masterOrder.cuttingLengthSize2 }} x {{ masterOrder.cuttingWidthSize2 }} cm</div>
                        </div>
                    </div>
                </div>
                        
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Kebutuhan</div>
                            <div class="cell value">{{ masterOrder.paperRequirement|default }} dreek</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Insit Cetak</div>
                            <div class="cell value">{{ masterOrder.printingInsit|default }} dreek</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Total Kertas</div>
                            <div class="cell value">{{ masterOrder.paperTotal|default }} dreek</div>
                        </div>
                        <div class="row">
                            <div class="cell label">PO Kertas #</div>
                            <div class="cell value">{{ masterOrder.purchaseOrderPaperHeader.getCodeNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal PO Kertas</div>
                            <div class="cell value">{{ masterOrder.purchaseOrderPaperHeader.transactionDate ? masterOrder.purchaseOrderPaperHeader.transactionDate|date('d M Y') : '' }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Supplier</div>
                            <div class="cell value">{{ masterOrder.purchaseOrderPaperHeader.supplier.company|default }}</div>
                        </div>
                    </div>
                </div>
            </div>
         
            <h4><u>Estimasi Tinta / Chemical</u></h4>
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Cyan</div>
                            <div class="cell value">{{ masterOrder.inkCyanPercentage }}% = {{ masterOrder.inkCyanWeight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Magenta</div>
                            <div class="cell value">{{ masterOrder.inkMagentaPercentage }}% = {{ masterOrder.inkMagentaWeight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Yellow</div>
                            <div class="cell value">{{ masterOrder.inkYellowPercentage }}% = {{ masterOrder.inkYellowWeight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Black</div>
                            <div class="cell value">{{ masterOrder.inkBlackPercentage }}% = {{ masterOrder.inkBlackWeight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">OPV/WB/UV</div>
                            <div class="cell value">{{ masterOrder.inkOpvPercentage }}% = {{ masterOrder.inkOpvWeight }} kg</div>
                        </div>
                    </div>
                </div>
                        
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">K-1</div>
                            <div class="cell value">{{ masterOrder.inkK1Color }} : {{ masterOrder.inkK1Percentage }}% = {{ masterOrder.inkK1Weight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">K-2</div>
                            <div class="cell value">{{ masterOrder.inkK2Color }} : {{ masterOrder.inkK2Percentage }}% = {{ masterOrder.inkK2Weight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">K-3</div>
                            <div class="cell value">{{ masterOrder.inkK3Color }} : {{ masterOrder.inkK3Percentage }}% = {{ masterOrder.inkK3Weight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">K-4</div>
                            <div class="cell value">{{ masterOrder.inkK4Color }} : {{ masterOrder.inkK4Percentage }}% = {{ masterOrder.inkK4Weight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Laminating</div>
                            <div class="cell value">{{ masterOrder.inkLaminatingSize }} cm = {{ masterOrder.inkLaminatingQuantity }} roll</div>
                        </div>
                    </div>
                </div>
            </div>
         
            <h4><u>Estimasi Packaging</u></h4>
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Lem</div>
                            <div class="cell value">{{ masterOrder.packagingGlueQuantity }} cm/pcs = {{ masterOrder.packagingGlueWeight }} kg</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Karet</div>
                            <div class="cell value">{{ masterOrder.packagingRubberQuantity }} pcs/ikat = {{ masterOrder.packagingRubberWeight }} pcs</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Kertas Packing</div>
                            <div class="cell value">{{ masterOrder.packagingPaperQuantity }} pcs/pak = {{ masterOrder.packagingPaperWeight }} lbr</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Dus</div>
                            <div class="cell value">{{ masterOrder.packagingBoxQuantity }} pcs/dus = {{ masterOrder.packagingBoxWeight }} pcs</div>
                        </div>
                    </div>
                </div>
                        
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Lakban >besar</div>
                            <div class="cell value">{{ masterOrder.packagingTapeLargeQuantity }} cm/pak (dus) = {{ masterOrder.packagingTapeLargeSize }} roll</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Lakban >kecil</div>
                            <div class="cell value">{{ masterOrder.packagingTapeSmallQuantity }} cm/pak (dus) = {{ masterOrder.packagingTapeSmallSize }} roll</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Plastik</div>
                            <div class="cell value">{{ masterOrder.packagingPlasticQuantity }} cm2/pack = {{ masterOrder.packagingPlasticSize }} m2</div>
                        </div>
                    </div>
                </div>
            </div>    
            
            <br />

            <fieldset class="border border-secondary rounded mb-3 p-3">
                <div class="note">
                    <div class="table full">
                        <div class="cell col">
                            <div class="table full">
                                <div class="row">
                                    <table class="detail">
                                        <thead>
                                            <tr>
                                                <th class="text-center" colspan="2">URUTAN PROSES</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            {% for processItem in masterOrder.processList %}
                                                <tr>
                                                    <td style="text-align: center">{{ loop.index }}</td>
                                                    <td>{{ processItem }}</td>
                                                </tr>
                                            {% endfor %}
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                        
                        <div class="cell col">
                            <div class="table full">
                                <div class="row">
                                    <table class="detail">
                                        <thead>
                                            <tr>
                                                <th class="text-center" colspan="2">DISTRIBUSI WO</th>
                                            </tr>
                                        </thead>
                                        <tfoot>
                                            <tr>
                                                <td>WO# Design</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_DESIGN', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Mountage/Prepress</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_MOUNTAGE', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Mesin Potong</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_CUTTING_MACHINE', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Cetak/Sablon</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_PRINTING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# PON/BOBST</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_PON', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Potong Jadi</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_CUTTING_FINISHING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Varnish/Laminating</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_VARNISH', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Mesin LEM</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_GLUEING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Mesin Stitching</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_STITCHING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Finishing</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_FINISHING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Packing</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_PACKING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# QC</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_QC_PRINTING', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Printing Checklist</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_PRINTING_CHECKLIST', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Mountage Checklist</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_MOUNTAGE_CHECKLIST', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                            <tr>
                                                <td>WO# Pond Checklist</td>
                                                <td style="text-align: center">{{ constant('WORK_ORDER_DISTRIBUTION_POND_CHECKLIST', masterOrder) in masterOrder.workOrderDistribution ? 'V' : '' }}</td>
                                            </tr>
                                        </tfoot>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </fieldset>
        </div>
        
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Catatan</div>
                            <div class="cell value">{{ masterOrder.note|default }}</div>
                        </div>
                        
                        <div class="row">
                            <div class="cell col">
                                <div>Item</div>
                                <div>________________</div>
                            </div>
                            <div class="cell col">
                                <div>Order</div>
                                <div>________________</div>
                            </div>
                            <div class="cell col">
                                <div>Stock</div>
                                <div>________________</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
                        
        <div class="table full">
            <div class="cell sig ">
                <div>Disetujui oleh,</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">Plant Manager</div>
            </div>
            <div class="cell sig">
                <div>Dibuat oleh,</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div class="blank">&nbsp;</div>
                <div>PPIC</div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('memo') }}
    <style>
        .col:nth-child(1) { width: 50% }
        .col:nth-child(2) { width: 50% }
        
        .col:nth-child(1) .label { width: 35% }
        .col:nth-child(1) .value { width: 65% }
        .col:nth-child(2) .label { width: 35% }
        .col:nth-child(2) .value { width: 65% }
        
        .sig:nth-child(1) { width: 50% }
        .sig:nth-child(2) { width: 50% }
    </style>
{% endblock %}