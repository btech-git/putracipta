<div data-controller="event-emitter json-loader"
     data-action="data-table:select->event-emitter#forward"
     data-event-emitter-attributes-list-param="{{ {'data-table:select': 'id'}|json_encode }}"
     data-json-loader-url-value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': 'json'})) }}"
     data-json-loader-method-value="POST"
     data-json-loader-form-target-value="{{ "form[name=#{form.vars.name}]" }}">

    {{ form_start(form) }}
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Header</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.productionDate, {'label': 'Tanggal MO', 'attr': {'data-controller': 'flatpickr-element', 'class': 'readonly-form-input'}}) }}
                    {{ form_row(form.deliveryDate, {'label': 'Tanggal Kirim', 'attr': {'data-controller': 'flatpickr-element', 'class': 'readonly-form-input'}}) }}
                    {{ form_row(form.machinePrinting, {'label': 'Mesin Cetak'}) }}
                </div>
                <div class="col">
                    <div class="row">
                        <label class="form-label">Jenis MO</label>
                        <div class="col">
                            {{ form_row(form.orderType, {'label': false}) }}
                        </div>
                        <div class="col">
                            {{ form_row(form.orderTypeMemo, {'label': false}) }}   
                        </div>
                    </div>
                    <div class="row">
                        <label class="form-label">Status Cetakan</label>
                        <div class="col">
                            {{ form_row(form.printingStatus, {'label': false}) }}
                        </div>
                        {#<div class="col">
                            {{ form_row(form.printingStatusData, {'label': false}) }}   
                        </div>#}
                    </div>
                </div>
            </div>
        </fieldset>
                    
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Data</legend>
            <div class="row">
                <div class="col">
                    <div class="mb-3">
                        <label for="{{ form.customer.vars.id }}-text" class="form-label">Customer</label>
                        {{ form_row(form.customer, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'customer-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.customerId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.customer.vars.id }}-text" class="form-control readonly-form-input {% if not form.customer.vars.valid %}is-invalid{% endif %}" value="{{ masterOrderHeader.customer.company|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#customer-dialog"
                               data-controller="dom-element"
                               data-action="customer-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.customerCompany'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.customer) }}
                    </div>
                    <div class="mb-3">
                        <label for="{{ form.paper.vars.id }}-text" class="form-label">Material Kertas</label>
                        {{ form_row(form.paper, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'paper-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.paperId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.paper.vars.id }}-text" class="form-control readonly-form-input {% if not form.paper.vars.valid %}is-invalid{% endif %}" value="{{ masterOrderHeader.paper.paperNameSizeCombination|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#paper-dialog"
                               data-controller="dom-element"
                               data-action="paper-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.paperName'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.paper) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Gram</label>
                        <input type="text" class="form-control" value="{{ masterOrderHeader.paper.weight|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="paper-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.paperWeight'}},
                               ]|json_encode }}" />
                    </div>
                    {#<div class="mb-3">
                        <label class="form-label">Jumlah Up Cetak</label>
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    {{ form_widget(form.quantityPrinting) }}
                                    {{ form_errors(form.quantityPrinting) }}
                                    <span class="input-group-text">&</span>
                                    {{ form_widget(form.quantityPrinting2) }}
                                    {{ form_errors(form.quantityPrinting2) }}
                                    <span class="input-group-text">Up/s</span>
                                </div>
                            </div>
                        </div>
                    </div>#}
                    <div class="mb-3">
                        <label class="form-label">Ukuran Mountage / Kris</label>
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    {{ form_widget(form.mountageSizeLength) }}
                                    {{ form_errors(form.mountageSizeLength) }}
                                    <span class="input-group-text">x</span>
                                    {{ form_widget(form.mountageSizeWidth) }}
                                    {{ form_errors(form.mountageSizeWidth) }}
                                    <span class="input-group-text">cm</span>
                                </div>
                            </div>
                        </div>
                    </div>
                    {{ form_row(form.weightPerPiece, {'label': 'Berat per pcs'}) }}
                    <div class="mb-3">
                        <label for="{{ form.productDevelopment.vars.id }}-text" class="form-label">Pengembangan Produk Baru</label>
                        {{ form_row(form.productDevelopment, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'product-development-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productDevelopmentId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.productDevelopment.vars.id }}-text" class="form-control readonly-form-input {% if not form.productDevelopment.vars.valid %}is-invalid{% endif %}" value="{{ masterOrderHeader.productDevelopment.codeNumber|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#product-development-dialog"
                               data-controller="dom-element"
                               data-action="product-development-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productDevelopmentCodeNumber'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.productDevelopment) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanggal Development</label>
                        <input type="text" class="form-control" value="{{ masterOrderHeader.productDevelopment.productionDate|default ? masterOrderHeader.productDevelopment.productionDate|date('d M Y') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="product-development-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productDevelopmentDate'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jenis Development</label>
                        <input type="text" class="form-control" value="{{ masterOrderHeader.productDevelopment.developmentTypeList|default ? masterOrderHeader.productDevelopment.developmentTypeList|join(', ') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="product-development-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productDevelopmentTypeList'}},
                               ]|json_encode }}" />
                    </div>
                </div>
                
                <div class="col">
                    {{ form_row(form.hotStamping, {'label': 'Hot Stamping'}) }}
                    {{ form_row(form.glossiness, {'label': 'Glossiness'}) }}
                    {{ form_row(form.finishing, {'label': 'Coating'}) }}
                    <div class="mb-3">
                        <label class="form-label">Design Code</label>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.designCode, {
                                    'attr': {
                                        'data-controller': 'dom-element',
                                        'data-action': 'design-code-table:data-table:select@document->dom-element#bind',
                                        'data-dom-element-bind-specifications-param': [
                                            {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.designCodeId'}},
                                        ]|json_encode,
                                    },
                                }) }}
                                <input type="text" id="{{ form.designCode.vars.id }}-text" class="form-control readonly-form-input {% if not form.designCode.vars.valid %}is-invalid{% endif %}" value="{{ masterOrderHeader.designCode.codeNumber|default }}" readonly="readonly"
                                       data-bs-toggle="modal" data-bs-target="#design-code-dialog"
                                       data-controller="dom-element"
                                       data-action="design-code-table:data-table:select@document->dom-element#bind"
                                       data-dom-element-bind-specifications-param="{{ [
                                           {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.designCodeNumber'}},
                                       ]|json_encode }}" />
                            </div>
                            {{ form_errors(form.designCode) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Warna / Pantone</label>
                        <div class="row">
                            <div class="col">
                                <div class="input-group">
                                    {{ form_widget(form.color, {
                                        'attr': {
                                            'data-controller': 'dom-element',
                                            'data-action': 'design-code-table:data-table:select@document->dom-element#bind',
                                            'data-dom-element-bind-specifications-param': [
                                                {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.designCodeColor'}},
                                            ]|json_encode,
                                        },
                                    }) }}
                                    {{ form_errors(form.color) }}
                                    <span class="input-group-text">/</span>
                                    {{ form_widget(form.pantone, {
                                        'attr': {
                                            'data-controller': 'dom-element',
                                            'data-action': 'design-code-table:data-table:select@document->dom-element#bind',
                                            'data-dom-element-bind-specifications-param': [
                                                {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.designCodePantone'}},
                                            ]|json_encode,
                                        },
                                    }) }}
                                    {{ form_errors(form.pantone) }}
                                    <span class="input-group-text">+</span>
                                    <input type="text" class="form-control" value="{{ masterOrderHeader.colorPantoneAdditional|default }}" readonly="readonly" />
                                </div>
                            </div>
                        </div>
                    </div>
                    <label class="form-label">Pisau Die Cut</label>
                    <div class="row">
                        <div class="col">
                            {{ form_row(form.dieCutBlade, {'label': false}) }}
                        </div>
                        {#<div class="col">
                            {{ form_row(form.dieCutBladeData, {'label': false}) }}
                        </div>#}
                    </div>
                    
                    <div class="mb-3">
                        <label class="form-label">Pisau Diecut #</label>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.diecutKnife, {
                                    'attr': {
                                        'data-controller': 'dom-element',
                                        'data-action': 'diecut-knife-table:data-table:select@document->dom-element#bind',
                                        'data-dom-element-bind-specifications-param': [
                                            {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.diecutKnifeId'}},
                                        ]|json_encode,
                                    },
                                }) }}
                                <input type="text" id="{{ form.diecutKnife.vars.id }}-text" class="form-control readonly-form-input {% if not form.diecutKnife.vars.valid %}is-invalid{% endif %}" value="{{ masterOrderHeader.diecutKnife.codeNumber|default }}" readonly="readonly"
                                       data-bs-toggle="modal" data-bs-target="#diecut-knife-dialog"
                                       data-controller="dom-element"
                                       data-action="diecut-knife-table:data-table:select@document->dom-element#bind"
                                       data-dom-element-bind-specifications-param="{{ [
                                           {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.diecutKnifeCodeNumber'}},
                                       ]|json_encode }}" />
                            </div>
                            {#<div class="col">
                                <input type="text" class="form-control" value="{{ masterOrderHeader.diecutKnife.code|default }}" readonly="readonly"
                                       data-controller="dom-element"
                                       data-action="diecut-knife-table:data-table:select@document->dom-element#bind"
                                       data-dom-element-bind-specifications-param="{{ [
                                           {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.diecutKnifeCode'}},
                                       ]|json_encode }}" />
                            </div>#}
                            {{ form_errors(form.diecutKnife) }}
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">No. Film Dieline Diecut (Millar)</label>
                        <div class="row">
                            <div class="col">
                                {{ form_row(form.dielineMillar, {
                                    'attr': {
                                        'data-controller': 'dom-element',
                                        'data-action': 'dieline-millar-table:data-table:select@document->dom-element#bind',
                                        'data-dom-element-bind-specifications-param': [
                                            {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.dielineMillarId'}},
                                        ]|json_encode,
                                    },
                                }) }}
                                <input type="text" id="{{ form.dielineMillar.vars.id }}-text" class="form-control readonly-form-input {% if not form.dielineMillar.vars.valid %}is-invalid{% endif %}" value="{{ masterOrderHeader.dielineMillar.codeNumber|default }}" readonly="readonly"
                                       data-bs-toggle="modal" data-bs-target="#dieline-millar-dialog"
                                       data-controller="dom-element"
                                       data-action="dieline-millar-table:data-table:select@document->dom-element#bind"
                                       data-dom-element-bind-specifications-param="{{ [
                                           {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.dielineMillarCodeNumber'}},
                                       ]|json_encode }}" />
                            </div>
                            {{ form_errors(form.diecutKnife) }}
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Products</legend>
            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#sale-order-detail-dialog">+ Order Customer</button>
            {{ include('production/master_order_header/_details_form.html.twig') }}
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Kebutuhan Material Kertas</legend>
            {{ include('production/master_order_header/_paper_form.html.twig') }}
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Estimasi Tinta / Chemical</legend>
            {{ include('production/master_order_header/_ink_form.html.twig') }}
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Estimasi Packaging</legend>
            {{ include('production/master_order_header/_packaging_form.html.twig') }}
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Urutan Proses</legend>
            {{ include('production/master_order_header/_processing_order_form.html.twig') }}
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Distribusi WO & Check Sheet</legend>
            {{ include('production/master_order_header/_checklist_form.html.twig') }}
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="row">
                <div class="col">
                    {{ form_row(form.transactionFile, {
                        'label': transactionFileExists ? 'A Model Layout File has been uploaded' : 'Upload Model Layout', 
                        'label_attr': {
                            'class': transactionFileExists ? 'text-danger fw-bold' : ''
                        }
                    }) }}
                    {{ form_row(form.note, {'label': 'Keterangan'}) }}
                </div>
            </div>
        </fieldset>

        <div class="d-grid">
            <button class="btn btn-success"
                    data-controller="dom-element"
                    data-action="dom-element#confirm"
                    data-dom-element-confirm-message-param="Are you sure you want to save this transaction?">
                Save
            </button>
        </div>
    {{ form_end(form) }}

    {% import 'app/bootstrap_dialog.html.twig' as dialog %}

    {{ dialog.start('customer-dialog', 'Customer List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_customer__list') }}"
             data-html-loader-auto-load-value="true">
        </div>
    {{ dialog.end() }}

    {{ dialog.start('sale-order-detail-dialog', 'Customer Order List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_sale_order_detail__list') }}"
             data-html-loader-auto-load-value="true"
             data-action="customer-table:data-table:select@document->html-loader#load">
        </div>
