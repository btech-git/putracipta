{% extends 'base.html.twig' %}

{% block title 'Memo' %}

{% block body %}
    <div class="memo">
        <div class="note" style="font-size: 10px">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label"><img id="logo" alt="logo" max-height="300px" src="{{ asset('images/Logo.jpg') }}"></div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label" style="font-size: 14px; text-align: center">FORMULIR</div>
                        </div>
                        <div class="row">
                            <div class="cell label" style="font-size: 18px; text-align: center">WORK ORDER POTONG BAHAN</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                                <div class="cell label">No Dokumen</div>
                                <div class="cell label">:</div>
                                <div class="cell label">F/PCK/PPIC/8.1-2</div>
                        </div>
                        <div class="row">
                                <div class="cell label">Revisi</div>
                                <div class="cell label">:</div>
                                <div class="cell label">0</div>
                        </div>
                        <div class="row">
                                <div class="cell label">Tanggal</div>
                                <div class="cell label">:</div>
                                <div class="cell label"></div>
                        </div>
                        <div class="row">
                                <div class="cell label">Halaman</div>
                                <div class="cell label">:</div>
                                <div class="cell label">1 dari 1</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <hr />
        
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Untuk Supply Mesin</div>
                            <div class="cell value">{{ masterOrderHeader.machinePrinting.name|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Kertas</div>
                            <div class="cell value">{{ masterOrderHeader.paper.paperNameSizeCombination|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Uk. Kris Cetak</div>
                            <div class="cell value">{{ masterOrderHeader.mountageSize }} cm</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Uk. Plano</div>
                            <div class="cell value">{{ masterOrderHeader.paperPlanoLength }} x {{ masterOrderHeader.paperPlanoWidth }} cm</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Uk. Potong</div>
                            <div class="cell value">{{ masterOrderHeader.cuttingLengthSize1 }} x {{ masterOrderHeader.cuttingWidthSize1 }} cm</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">No MO</div>
                            <div class="cell value">{{ masterOrderHeader.getCodeNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal WO</div>
                            <div class="cell value">{{ masterOrderHeader.transactionDate|default ? masterOrderHeader.transactionDate|date('d M Y') }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal Dikerjakan</div>
                            <div class="cell value">_______________________________</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Jumlah Kertas</div>
                            <div class="cell value">{{ masterOrderHeader.quantityPaper }} rim {{ masterOrderHeader.paperRequirement }} dreek</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Jumlah Up</div>
                            <div class="cell value">{{ masterOrderHeader.paperMountage }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <br />
        
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="note">
                <div class="table full">
                    <div class="cell col">
                        <div class="table full">
                            <div class="row">
                                <div class="cell label">Gambar : </div>
                                <div><img id="upload" width="128px" alt="Layout Model Image" src="{{ asset('uploads/master-order/' ~ masterOrderHeader.id ~ '.' ~ masterOrderHeader.layoutModelFileExtension) }}"></div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>

        <br />
        
        <div class="note">
            <div class="table full">
                <div class="row">
                    <table class="detail">
                        <thead class="table-secondary">
                            <tr>
                                <th class="text-center">Shift #</th>
                                <th class="text-center">Tanggal Potong</th>
                                <th class="text-center">Jam Mulai</th>
                                <th class="text-center">Jam Selesai</th>
                                <th class="text-center">Qty Rim</th>
                                <th class="text-center">Qty Dreek</th>
                                <th class="text-center">Keterangan</th>
                                <th style="min-width: 30"></th>
                            </tr>
                        </thead>
                        <tfoot>
                            {% for row in 0..15 %}
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                </tr>
                            {% endfor %}
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
                
        <br />
               
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Hasil potongan / kualitas</div>
                            <div class="cell value text-left">____________________________________________________</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
         
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Tanggal Dikembalikan WO#</div>
                            <div class="cell value">_______________________</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">WO# dikembalikan oleh</div>
                            <div class="cell value">_______________________</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <br />
                
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="table full">
                            <div class="cell sig">
                                <div>Dikerjakan oleh,</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div>Operator</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="table full">
                            <div class="cell sig">
                                <div>Diperiksa oleh,</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div>Spv Prod</div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="table full">
                            <div class="cell sig">
                                <div>WO# dikeluarkan oleh,</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div>PPIC</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('memo') }}
    <style>
        .col:nth-child(1) { width: 50% }
        .col:nth-child(2) { width: 50% }
        
        .col:nth-child(1) .label { width: 35% }
        .col:nth-child(1) .value { width: 65% }
        .col:nth-child(2) .label { width: 35% }
        .col:nth-child(2) .value { width: 65% }
        
        .sig:nth-child(1) { width: 50% }
        .sig:nth-child(2) { width: 50% }
    </style>
{% endblock %}