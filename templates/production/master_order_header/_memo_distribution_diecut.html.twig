{% extends 'base.html.twig' %}

{% block title 'Memo' %}

{% block body %}
    <div class="memo">
        <div class="note" style="font-size: 10px">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label"><img id="logo" alt="logo" max-height="300px" src="{{ asset('images/Logo.jpg') }}"></div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label" style="font-size: 14px; text-align: center">FORMULIR</div>
                        </div>
                        <div class="row">
                            <div class="cell label" style="font-size: 18px; text-align: center">WORK ORDER DIECUT BOBST/MANUAL</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                                <div class="cell label">No Dokumen</div>
                                <div class="cell label">:</div>
                                <div class="cell label">F/PCK/PPIC/8.1-7</div>
                        </div>
                        <div class="row">
                                <div class="cell label">Revisi</div>
                                <div class="cell label">:</div>
                                <div class="cell label">0</div>
                        </div>
                        <div class="row">
                                <div class="cell label">Tanggal</div>
                                <div class="cell label">:</div>
                                <div class="cell label"></div>
                        </div>
                        <div class="row">
                                <div class="cell label">Halaman</div>
                                <div class="cell label">:</div>
                                <div class="cell label">1 dari 1</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        
        <hr />
        
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Nama Order</div>
                            <div class="cell value">{{ masterOrderHeader.machinePrinting.name|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal Order</div>
                            <div class="cell value">{{ masterOrderHeader.designCode.codeNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Kertas & Ukuran</div>
                            <div class="cell value">{{ masterOrderHeader.paper.paperNameSizeCombination|default }} Gram</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Jumlah Material</div>
                            <div class="cell value">{{ masterOrderHeader.quantityPaper }} rim {{ masterOrderHeader.paperRequirement }} dreek</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">MO #</div>
                            <div class="cell value">{{ masterOrderHeader.getCodeNumber|default }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Tanggal MO</div>
                            <div class="cell value">{{ masterOrderHeader.transactionDate|default ? masterOrderHeader.transactionDate|date('d M Y') }}</div>
                        </div>
                        <div class="row">
                            <div class="cell label">Kode Pisau</div>
                            <div class="cell value">{{ masterOrderHeader.diecutKnife.codeNumber }}</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
              
        <br />
        
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="note">
                <div class="table full">
                    <div class="cell col-12 col-md-8">
                        <div class="table full">
                            <div class="row">
                                <table class="detail">
                                    <thead class="table-secondary">
                                        <tr>
                                            <th>Pekerjaan</th>
                                            <th>Waktu Mulai</th>
                                            <th>Waktu Selesai</th>
                                            <th>Keterangan</th>
                                        </tr>
                                    </thead>
                                    <tfoot>
                                        <tr>
                                            <td rowspan="3">Pembersihan</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td rowspan="3">Lama Setting</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                        <tr>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                            <td>&nbsp;</td>
                                        </tr>
                                    </tfoot>
                                </table>
                            </div>
                        </div>
                    </div>
                    <div class="cell col-6 col-md-4">
                        <div class="table full">
                            <div class="row">
                                <div class="cell label">Pemakaian Chito</div>
                                <div class="cell value"></div>
                            </div>
                            <div class="row">
                                <div class="cell label">Chito No __________ :</div>
                                <div class="cell value"> _______________________________ Btg</div>
                            </div>
                            <div class="row">
                                <div class="cell label">Chito No __________ :</div>
                                <div class="cell value"> _______________________________ Btg</div>
                            </div>
                            <div class="row">
                                <div class="cell label">Chito No __________ :</div>
                                <div class="cell value"> _______________________________ Btg</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </fieldset>
                
        <br />
        
        <div class="note">
            <div class="table full">
                <div class="row">
                    <table class="detail">
                        <thead class="table-secondary">
                            <tr>
                                <th class="text-center">Shift </th>
                                <th class="text-center">Tanggal</th>
                                <th class="text-center">Jumlah lembar yg diterima</th>
                                <th class="text-center">Waktu Mulai</th>
                                <th class="text-center">Waktu Selesai</th>
                                <th class="text-center">Operator</th>
                                <th class="text-center">Jumlah yg dihasilkan</th>
                                <th class="text-center">Keterangan</th>
                                <th class="text-center">Estimasi Kerja</th>
                            </tr>
                        </thead>
                        <tfoot>
                            {% for row in 0..25 %}
                                <tr>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                    <td>&nbsp;</td>
                                </tr>
                            {% endfor %}
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>
              
        <br />
              
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Catatan</div>
                            <div class="cell value">_______________________</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
          
        <br />
              
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">Tanggal Pengembalian WO#</div>
                            <div class="cell value">_______________________</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="row">
                            <div class="cell label">WO# dikembalikan oleh</div>
                            <div class="cell value">_______________________</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
           
        <br />
                        
        <div class="note">
            <div class="table full">
                <div class="cell col">
                    <div class="table full">
                        <div class="cell sig">
                            <div>Diselesaikan oleh,</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div>Operator</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                    <div class="table full">
                        <div class="cell sig">
                            <div>Diperiksa oleh,</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div class="blank">&nbsp;</div>
                            <div>Spv Prod</div>
                        </div>
                    </div>
                </div>
                <div class="cell col">
                        <div class="table full">
                            <div class="cell sig">
                                <div>WO# dikeluarkan oleh,</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div class="blank">&nbsp;</div>
                                <div>PPIC</div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block javascripts %}{% endblock %}

{% block stylesheets %}
    {{ encore_entry_link_tags('memo') }}
    <style>
        .col:nth-child(1) { width: 50% }
        .col:nth-child(2) { width: 50% }
        
        .col:nth-child(1) .label { width: 35% }
        .col:nth-child(1) .value { width: 65% }
        .col:nth-child(2) .label { width: 35% }
        .col:nth-child(2) .value { width: 65% }
        
        .sig:nth-child(1) { width: 50% }
        .sig:nth-child(2) { width: 50% }
    </style>
{% endblock %}