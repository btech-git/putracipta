{% extends 'layout_page.html.twig' %}

{% block title 'Show Formulir Produk Baru' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_production_product_prototype_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_production_product_prototype_edit', {'id': productPrototype.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Proses Development</th>
                <td colspan="3">{{ productPrototype.developmentType ? productPrototype.developmentType|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Sumber Data</th>
                <td colspan="3">{{ productPrototype.dataSource ? productPrototype.dataSource|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Produk Baru #</th>
                <td>{{ productPrototype.getCodeNumber }}</td>
                <th>Kode Produk</th>
                <td>{{ productPrototype.productCode }}</td>
            </tr>
            <tr>
                <th>Tanggal</th>
                <td>{{ productPrototype.productionDate ? productPrototype.productionDate|date('d M Y') : '' }}</td>
                <th>Nama Produk</th>
                <td>{{ productPrototype.productName }}</td>
            </tr>
            <tr>
                <th>Customer</th>
                <td>{{ productPrototype.customer.name|default }}</td>
                <th>Ukuran Jadi</th>
                <td>{{ productPrototype.measurement }}</td>
            </tr>
            <tr>
                <th>Marketing</th>
                <td>{{ productPrototype.employee.name|default }}</td>
                <td></td>
                <td></td>
            </tr>
        </tbody>
    </table>
                
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan='6' class='text-center'>SPESIFIKASI</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Material Kertas</th>
                <td>{{ productPrototype.paper.code|default }}</td>
            </tr>
            <tr>
                <th>Material Name</th>
                <td>{{ productPrototype.paper.paperNameSizeCombination|default }}</td>
            </tr>
            <tr>
                <th>Warna (TC/Pantone)</th>
                <td>{{ productPrototype.color }}</td>
            <tr>
                <th>Quantity (pcs)</th>
                <td>{{ productPrototype.quantityProduction }}</td>
            </tr>
            <tr>
                <th>Jumlah Mata (up/sheet)</th>
                <td>{{ productPrototype.quantityBlade }}</td>
            </tr>
        </tbody>
    </table>
                      
    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th colspan='6' class='text-center'>FINISHING</th>
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Laminating</th>
                <td>{{ productPrototype.dataSource ? productPrototype.laminatingList|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Coating</th>
                <td>{{ productPrototype.dataSource ? productPrototype.coatingList|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Proses</th>
                <td>{{ productPrototype.dataSource ? productPrototype.processList|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Keterangan</th>
                <td>{{ productPrototype.note }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ productPrototype.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>
    
    <div class="text-center">
        <h4>Layout</h4>
        <img width="256px" src="{{ asset('uploads/product-prototype/' ~ productPrototype.id ~ '.' ~ productPrototype.productionFileExtension) }}" alt="Product Prototype Image" />
    </div>

    {#{{ include('production/product_prototype/_delete_form.html.twig') }}#}
{% endblock %}
