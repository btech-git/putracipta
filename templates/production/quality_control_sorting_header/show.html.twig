{% extends 'layout_page.html.twig' %}

{% block title 'Show Quality Control Sorting Header' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_production_quality_control_sorting_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_production_quality_control_sorting_header_edit', {'id': qualityControlSortingHeader.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Employee In Charge</th>
                <td>{{ qualityControlSortingHeader.employeeInCharge }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ qualityControlSortingHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Code Number Ordinal</th>
                <td>{{ qualityControlSortingHeader.codeNumberOrdinal }}</td>
            </tr>
            <tr>
                <th>Code Number Month</th>
                <td>{{ qualityControlSortingHeader.codeNumberMonth }}</td>
            </tr>
            <tr>
                <th>Code Number Year</th>
                <td>{{ qualityControlSortingHeader.codeNumberYear }}</td>
            </tr>
            <tr>
                <th>Created Transaction Date Time</th>
                <td>{{ qualityControlSortingHeader.createdTransactionDateTime ? qualityControlSortingHeader.createdTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified Transaction Date Time</th>
                <td>{{ qualityControlSortingHeader.modifiedTransactionDateTime ? qualityControlSortingHeader.modifiedTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Transaction Date</th>
                <td>{{ qualityControlSortingHeader.transactionDate ? qualityControlSortingHeader.transactionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ qualityControlSortingHeader.note }}</td>
            </tr>
            <tr>
                <th>Code Number Version</th>
                <td>{{ qualityControlSortingHeader.codeNumberVersion }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('production/quality_control_sorting_header/_delete_form.html.twig') }}
{% endblock %}
