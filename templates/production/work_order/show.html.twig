{% extends 'layout_page.html.twig' %}

{% block title 'Show Work Order' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_production_work_order_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_production_work_order_edit', {'id': workOrder.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Work Order #</th>
                <td>{{ workOrder.getCodeNumber }}</td>
            </tr>
            <tr>
                <th>Tanggal</th>
                <td>{{ workOrder.productionDate ? workOrder.productionDate|date('d M Y') : '' }}</td>
            </tr>
            <tr>
                <th>Order Status</th>
                <td>{{ workOrder.orderStatus }}</td>
            </tr>
            <tr>
                <th>Color</th>
                <td>{{ workOrder.color }}</td>
            </tr>
            <tr>
                <th>Order Up</th>
                <td>{{ workOrder.orderUp }}</td>
            </tr>
            <tr>
                <th>Insit</th>
                <td>{{ workOrder.insit }}</td>
            </tr>
            <tr>
                <th>Printing Kris Length</th>
                <td>{{ workOrder.printingKrisLength }}</td>
            </tr>
            <tr>
                <th>Printing Kris Width</th>
                <td>{{ workOrder.printingKrisWidth }}</td>
            </tr>
            <tr>
                <th>Plano Size Length</th>
                <td>{{ workOrder.planoSizeLength }}</td>
            </tr>
            <tr>
                <th>Plano Size Width</th>
                <td>{{ workOrder.planoSizeWidth }}</td>
            </tr>
            <tr>
                <th>Plano Quantity</th>
                <td>{{ workOrder.planoQuantity }}</td>
            </tr>
            <tr>
                <th>Cutting Length1</th>
                <td>{{ workOrder.cuttingLength1 }}</td>
            </tr>
            <tr>
                <th>Cutting Width1</th>
                <td>{{ workOrder.cuttingWidth1 }}</td>
            </tr>
            <tr>
                <th>Cutting Length2</th>
                <td>{{ workOrder.cuttingLength2 }}</td>
            </tr>
            <tr>
                <th>Cutting Width2</th>
                <td>{{ workOrder.cuttingWidth2 }}</td>
            </tr>
            <tr>
                <th>Cutting Quantity</th>
                <td>{{ workOrder.cuttingQuantity }}</td>
            </tr>
            <tr>
                <th>Cutting Insit</th>
                <td>{{ workOrder.cuttingInsit }}</td>
            </tr>
            <tr>
                <th>Packing Material Box</th>
                <td>{{ workOrder.packingMaterialBox }}</td>
            </tr>
            <tr>
                <th>Packing Material Paper</th>
                <td>{{ workOrder.packingMaterialPaper }}</td>
            </tr>
            <tr>
                <th>Plano Conversion</th>
                <td>{{ workOrder.planoConversion }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('production/work_order/_delete_form.html.twig') }}
{% endblock %}
