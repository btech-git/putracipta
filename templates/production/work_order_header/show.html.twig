{% extends 'layout_page.html.twig' %}

{% block title 'Show Work Order' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_production_work_order_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_production_work_order_header_edit', {'id': workOrderHeader.id}) }}">Edit</a>
{% endblock %}

