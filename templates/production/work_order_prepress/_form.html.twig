<div data-controller="event-emitter json-loader"
     data-action="data-table:select->event-emitter#forward"
     data-event-emitter-attributes-list-param="{{ {'data-table:select': 'id'}|json_encode }}"
     data-json-loader-url-value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': 'json'})) }}"
     data-json-loader-method-value="POST"
     data-json-loader-form-target-value="{{ "form[name=#{form.vars.name}]" }}">

    {{ form_start(form) }}
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Header</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.productionDate, {'label': 'Tanggal Prepress', 'attr': {'data-controller': 'flatpickr-element'}}) }}
                    <div class="mb-3">
                        <label for="{{ form.workOrderHeader.vars.id }}-text" class="form-label">Work Order #</label>
                        {{ form_row(form.workOrderHeader, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'work-order-header-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.workOrderHeaderId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.workOrderHeader.vars.id }}-text" class="form-control {% if not form.workOrderHeader.vars.valid %}is-invalid{% endif %}" value="{{ workOrderPrepress.workOrderHeader.codeNumber|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#work-order-header-dialog"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.workOrderHeaderCodeNumber'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.workOrderHeader) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanggal WO</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.productionDate|default ? workOrderPrepress.workOrderHeader.productionDate|date('d M Y') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.workOrderHeaderDate'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanggal Kirim</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.deliveryDate|default ? workOrderPrepress.workOrderHeader.masterOrder.deliveryDate|date('d M Y') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderDeliveryDate'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Master Order #</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.codeNumber|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderCodeNumber'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Mesin</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.printingMachine|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderPrintingMachine'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Customer</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.customer.company|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.customerCompany'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kode Produk</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.product.code|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productCode'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Nama Produk</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.product.name|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.productName'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Kode Design</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.designCode|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderDesignCode'}},
                               ]|json_encode }}" />
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label class="form-label">Status Cetakan</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.printingStatus|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderPrintingStatus'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Quantity Order</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.quantityOrder|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderQuantityOrder'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Stock / Kekurangan</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.quantityStock|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderQuantityStock'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Warna / Pantone</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.color|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderColor'}},
                               ]|json_encode }}" />
                    </div>
                    <label class="form-label">Ukuran Jadi (mm)</label>
                    <div class="row">
                        <div class="col">
                            <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.dimensionLength|default }}" readonly="readonly"
                                   data-controller="dom-element"
                                   data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                                   data-dom-element-bind-specifications-param="{{ [
                                       {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderDimensionLength'}},
                                   ]|json_encode }}" />
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.dimensionWidth|default }}" readonly="readonly"
                                   data-controller="dom-element"
                                   data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                                   data-dom-element-bind-specifications-param="{{ [
                                       {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderDimensionWidth'}},
                                   ]|json_encode }}" />
                        </div>
                        <div class="col">
                            <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.dimensionHeight|default }}" readonly="readonly"
                                   data-controller="dom-element"
                                   data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                                   data-dom-element-bind-specifications-param="{{ [
                                       {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderDimensionHeight'}},
                                   ]|json_encode }}" />
                        </div>
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Ukuran Mountage</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.paperMountage|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderPaperMountage'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Jumlah Dreek</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.paperTotal|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderPaperTotal'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Finishing</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.masterOrder.finishing|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.masterOrderFinishing'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Up/s (Mata)</label>
                        <input type="text" class="form-control" value="{{ workOrderPrepress.workOrderHeader.orderUp|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="work-order-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.workOrderHeaderOrderUp'}},
                               ]|json_encode }}" />
                    </div>
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="row">
                <div class="table-responsive">
                    <table class="table table-bordered">
                        <thead class="table-secondary">
                            <tr>
                                <th rowspan="2">&nbsp;</th>
                                <th rowspan="2" class="text-center">Warna</th>
                                <th colspan="2" class="text-center">Output Awal</th>
                                <th colspan="2" class="text-center">Tambahan / Revisi</th>
                                <th colspan="3" class="text-center">Downtime</th>
                            </tr>
                            <tr>
                                <th class="text-center">Mulai</th>
                                <th class="text-center">Selesai</th>
                                <th class="text-center">Mulai</th>
                                <th class="text-center">Selesai</th>
                                <th class="text-center">Mulai</th>
                                <th class="text-center">Selesai</th>
                                <th class="text-center">Keterangan</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td rowspan="4">CTcP</td>
                                <td class="text-center">C</td>
                                <td>{{ form_row(form.internalCyanBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalCyanBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalCyanRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalCyanRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalCyanDowntimeStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalCyanDowntimeEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalCyanDowntimeMemo, {'label': false}) }}</td>
                            </tr>
                            <tr>
                                <td class="text-center">M</td>
                                <td>{{ form_row(form.internalMagentaBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalMagentaBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalMagentaRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalMagentaRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalMagentaDowntimeStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalMagentaDowntimeEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalMagentaDowntimeMemo, {'label': false}) }}</td>
                            </tr>
                            <tr>
                                <td class="text-center">Y</td>
                                <td>{{ form_row(form.internalYellowBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalYellowBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalYellowRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalYellowRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalYellowDowntimeStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalYellowDowntimeEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalYellowDowntimeMemo, {'label': false}) }}</td>
                            </tr>
                            <tr>
                                <td class="text-center">B</td>
                                <td>{{ form_row(form.internalBlackBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalBlackBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalBlackRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalBlackRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalBlackDowntimeStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalBlackDowntimeEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.internalBlackDowntimeMemo, {'label': false}) }}</td>
                            </tr>
                            <tr>
                                <td rowspan="4">Plate Subcon</td>
                                <td class="text-center">C</td>
                                <td>{{ form_row(form.subconCyanBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconCyanBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconCyanRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconCyanRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                            </tr>
                            <tr>
                                <td class="text-center">M</td>
                                <td>{{ form_row(form.subconMagentaBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconMagentaBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconMagentaRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconMagentaRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                            </tr>
                            <tr>
                                <td class="text-center">Y</td>
                                <td>{{ form_row(form.subconYellowBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconYellowBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconYellowRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconYellowRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                            </tr>
                            <tr>
                                <td class="text-center">B</td>
                                <td>{{ form_row(form.subconBlackBeginningOutputStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconBlackBeginningOutputEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconBlackRevisionStartDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                                <td>{{ form_row(form.subconBlackRevisionEndDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="row">
                <div class="col">
                    {{ form_row(form.quantityPlateNew, {'label': 'Plate Baru'}) }}
                    {{ form_row(form.quantityPlateOld, {'label': 'Plate Lama'}) }}
                    {{ form_row(form.quantityPlateUsed, {'label': 'Plate Bekas'}) }}
                    {{ form_row(form.plateBrand, {'label': 'Plate Merk'}) }}
                </div>
                <div class="col">
                    {{ form_row(form.employeeIdPlateRelease, {'label': 'Plate Diserahkan kepada'}) }}
                    {{ form_row(form.employeeIdWorkOrderReturn, {'label': 'WO dikembalikan oleh'}) }}
                    {{ form_row(form.workOrderReturnDate, {'label': 'Tanggal Pengembalian WO', 'attr': {'data-controller': 'flatpickr-element'}}) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <div class="row">
                <div class="col">
                    {{ form_row(form.note, {'label': 'Catatan'}) }}
                </div>
            </div>
        </fieldset>

        <div class="d-grid">
            <button class="btn btn-success"
                    data-controller="dom-element"
                    data-action="dom-element#confirm"
                    data-dom-element-confirm-message-param="Are you sure you want to save this transaction?">
                Save
            </button>
        </div>
    {{ form_end(form) }}

    {% import 'app/bootstrap_dialog.html.twig' as dialog %}

    {{ dialog.start('work-order-header-dialog', 'Work Order List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_work_order_header__list') }}"
             data-html-loader-auto-load-value="true">
        </div>
    {{ dialog.end() }}
</div>
