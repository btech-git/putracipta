<form method="post" action="{{ path('app_purchase_purchase_order_header_reject', {'id': purchaseOrderHeader.id}) }}">
    <input type="hidden" name="_token" value="{{ csrf_token('reject' ~ purchaseOrderHeader.id) }}">
    <button class="btn btn-danger btn-sm"
            data-controller="dom-element"
            data-action="dom-element#confirm"
            data-dom-element-confirm-message-param="Are you sure you want to reject this transaction?">
        Reject
    </button>
</form>
