{% import 'app/data_grid.html.twig' as grid %}

<div class="d-print-none">
    {{ grid.form(form) }}

    {{ grid.info(form, count, inventoryRequestHeaders) }}

    {#<div class="text-center">
        <button type="button" class="btn btn-info btn-sm" id="export">Export</button>
    </div>#}

    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Putracipta Karindomas</div>
        <div class="report-title">Laporan Permintaan Material</div>
        <div>
            {% set startDate = form.vars.value.filter.transactionDate.1|default %}
            {% set endDate = form.vars.value.filter.transactionDate.2|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-start">Permintaan #</th>
                <th class="text-start">Tanggal</th>
                <th class="text-start">Gudang</th>
                <th class="text-start">Departemen</th>
                <th class="text-start">Part #</th>
                <th class="text-start">Tanggal Kirim</th>
                <th class="text-start">Jenis</th>
                <th class="text-start">Note</th>
            </tr>
            <tr>
                <td colspan="8">
                    <table>
                        <thead>
                            <tr>
                                <th class="text-start">Kode</th>
                                <th class="text-start">Nama Item</th>
                                <th class="text-start">Qty</th>
                                <th class="text-start">Satuan</th>
                                <th class="text-start">Memo</th>
                            </tr>
                        </thead>
                    </table>
                </td>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for inventoryRequestHeader in inventoryRequestHeaders %}
                <tr>
                    <td class="text-start">{{ inventoryRequestHeader.codeNumber|default }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.transactionDate|default ? inventoryRequestHeader.transactionDate|date('j M Y') }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.warehouse.name|default }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.departmentName|default }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.partNumber|default }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.pickupDate|default ? inventoryRequestHeader.pickupDate|date('j M Y') }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.requestMode|default }}</td>
                    <td class="text-start">{{ inventoryRequestHeader.note|default }}</td>
                </tr>
                <tr class="border-bottom-dotted-bold">
                    <td colspan="8">
                        <table>
                            <tbody>
                                {% if (inventoryRequestHeader.requestMode == 'paper') %}
                                    {% for inventoryRequestPaperDetail in inventoryRequestHeader.inventoryRequestPaperDetails %}
                                        <tr>
                                            <td class="text-start">{{ inventoryRequestPaperDetail.paper.codeNumber|default }}</td>
                                            <td class="text-start">{{ inventoryRequestPaperDetail.paper.paperNameSizeCombination|default }}</td>
                                            <td class="text-center">{{ inventoryRequestPaperDetail.quantity|default|number_format(0) }}</td>
                                            <td class="text-start">{{ inventoryRequestPaperDetail.unit.name|default }}</td>
                                            <td class="text-start">{{ inventoryRequestPaperDetail.memo|default }}</td>
                                        </tr>
                                    {% endfor %}
                                {% elseif (inventoryRequestHeader.requestMode == 'material') %} 
                                    {% for inventoryRequestMaterialDetail in inventoryRequestHeader.inventoryRequestMaterialDetails %}
                                        <tr>
                                            <td class="text-start">{{ inventoryRequestMaterialDetail.material.code|default }}</td>
                                            <td class="text-start">{{ inventoryRequestMaterialDetail.material.name|default }}</td>
                                            <td class="text-center">{{ inventoryRequestMaterialDetail.quantity|default|number_format(0) }}</td>
                                            <td class="text-start">{{ inventoryRequestMaterialDetail.unit.name|default }}</td>
                                            <td class="text-start">{{ inventoryRequestMaterialDetail.memo|default }}</td>
                                        </tr>
                                    {% endfor %}
                                {% endif %} 
                            </tbody>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-print-none">
    <br />
    {{ grid.navigation(form, count, inventoryRequestHeaders) }}
</div>
