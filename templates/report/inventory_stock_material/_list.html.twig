{% import 'app/data_grid.html.twig' as grid %}

<div class="d-print-none">
    {{ grid.form(form) }}

    <div class="my-3 px-3 bg-light" {{ grid.filter_link(form) }}>
        <div class="row">
            <div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Transaction Date</label>
                    <div class="col-sm-10 w-75">
                        <div class="row">
                            <div class="col">
                                <input class="form-control readonly-form-input" type="text" data-controller="flatpickr-element" {{ grid.filter_link_item(form, 'transactionDate', [form.filter['transactionDate'].0.vars.choices.0.value, true, false]) }} value="{{ form.filter.transactionDate.1.vars.value }}" />
                            </div>
                            <div class="col">
                                <input class="form-control readonly-form-input" type="text" data-controller="flatpickr-element" {{ grid.filter_link_item(form, 'transactionDate', [form.filter['transactionDate'].0.vars.choices.0.value, false, true]) }} value="{{ form.filter.transactionDate.2.vars.value }}" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="col">
                <div class="my-2 row">
                    <label class="col-sm-2 col-form-label w-25">Gudang</label>
                    <div class="col-sm-10 w-75">
                        
                    </div>
                </div>
            </div>
        </div>
    </div>

    {{ grid.info(form, count, inventoryStockMaterials) }}

    {#<div class="text-center">
        <button type="button" class="btn btn-info btn-sm" id="export">Export</button>
    </div>#}

    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Putracipta Karindomas</div>
        <div class="report-title">Laporan Stok Gudang Material</div>
        <div>
            {% set startDate = form.vars.value.filter.transactionDate.1|default %}
            {% set endDate = form.vars.value.filter.transactionDate.2|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-start">Kode</th>
                <th class="text-start">Nama Item</th>
                <th class="text-start">Type</th>
                <th class="text-start">Tanggal</th>
                <th class="text-start">Gudang</th>
                <th class="text-start">Remark</th>
                <th class="text-start">Qty In</th>
                <th class="text-start">Qty Out</th>
                <th class="text-start">Stock</th>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% set qtyStock = 0 %}
            {% for inventoryStockMaterial in inventoryStockMaterials %}
                {% set qtyIn = inventoryStockMaterial.quantityIn %}
                {% set qtyOut = inventoryStockMaterial.quantityOut %}
                {% set qtyStock = qtyStock + qtyIn - qtyOut %}
                <tr>
                    <td class="text-start">{{ inventoryStockMaterial.product.code|default }}</td>
                    <td class="text-start">{{ inventoryStockMaterial.product.name|default }}</td>
                    <td class="text-start">{{ inventoryStockMaterial.transactionType|default }}</td>
                    <td class="text-start">{{ inventoryStockMaterial.transactionDate|default ? inventoryStockMaterial.transactionDate|date('j M Y') }}</td>
                    <td class="text-start">{{ inventoryStockMaterial.warehouse.name|default }}</td>
                    <td class="text-start">{{ inventoryStockMaterial.transactionSubject|default }}</td>
                    <td class="text-center">{{ qtyIn|default|number_format(0) }}</td>
                    <td class="text-center">{{ qtyOut|default|number_format(0) }}</td>
                    <td class="text-center">{{ qtyStock|default|number_format(0) }}</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-print-none">
    <br />
    {{ grid.navigation(form, count, inventoryStockMaterials) }}
</div>
