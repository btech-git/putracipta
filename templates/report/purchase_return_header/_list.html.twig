{% import 'app/data_grid.html.twig' as grid %}

<div class="d-print-none">
    {{ grid.form(form) }}

    {{ grid.info(form, count, purchaseReturnHeaders) }}

    {#<div class="text-center">
        <button type="button" class="btn btn-info btn-sm" id="export">Export</button>
    </div>#}

    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Putracipta Karindomas</div>
        <div class="report-title">Laporan Purchase Return</div>
        <div>
            {% set startDate = form.vars.value.filter.transactionDate.1|default %}
            {% set endDate = form.vars.value.filter.transactionDate.2|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>
    </div>

    <br />

    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-start">Retur #</th>
                <th class="text-start">Tanggal</th>
                <th class="text-start">Penerimaan #</th>
                <th class="text-start">Supplier</th>
                <th class="text-start">Gudang</th>
                <th class="text-start">Note</th>
            </tr>
            <tr>
                <td colspan="6">
                    <table>
                        <thead>
                            <tr>
                                <th class="text-start">Kode</th>
                                <th class="text-start">Nama Item</th>
                                <th class="text-start">Qty Terima</th>
                                <th class="text-start">Qty Retur</th>
                                <th class="text-start">Satuan</th>
                                <th class="text-start">Harga</th>
                                <th class="text-start">Total</th>
                            </tr>
                        </thead>
                    </table>
                </td>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for purchaseReturnHeader in purchaseReturnHeaders %}
                <tr>
                    <td class="text-start">{{ purchaseReturnHeader.codeNumber|default }}</td>
                    <td class="text-start">{{ purchaseReturnHeader.transactionDate|default ? purchaseReturnHeader.transactionDate|date('j M Y') }}</td>
                    <td class="text-start">{{ purchaseReturnHeader.receiveHeader.codeNumber|default }}</td>
                    <td class="text-start">{{ purchaseReturnHeader.supplier.company|default }}</td>
                    <td class="text-start">{{ purchaseReturnHeader.warehouse.name|default }}</td>
                    <td class="text-start">{{ purchaseReturnHeader.note|default }}</td>
                </tr>
                <tr class="border-bottom-dotted-bold">
                    <td colspan="6">
                        <table>
                            <tbody>
                                {% for purchaseReturnDetail in purchaseReturnHeader.purchaseReturnDetails %}
                                    <tr>
                                        <td class="text-start">{{ purchaseReturnDetail.material is null ? purchaseReturnDetail.paper.codeNumber|default : purchaseReturnDetail.material.code|default }}</td>
                                        <td class="text-start">{{ purchaseReturnDetail.material is null ? purchaseReturnDetail.paper.paperNameSizeCombination|default : purchaseReturnDetail.material.name|default }}</td>
                                        <td class="text-center">{{ purchaseReturnDetail.receiveDetail.receivedQuantity|default|number_format(0) }}</td>
                                        <td class="text-center">{{ purchaseReturnDetail.quantity|default|number_format(0) }}</td>
                                        <td class="text-start">{{ purchaseReturnDetail.unit.name|default }}</td>
                                        <td class="text-end">{{ purchaseReturnDetail.unitPrice|default|number_format(2) }}</td>
                                        <td class="text-end">{{ purchaseReturnDetail.total|default|number_format(2) }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="border-top-solid-normal">
                                <tr>
                                    <td class="text-end" colspan="6"><strong>Sub Total</strong></td>
                                    <td class="text-end"><strong>{{ purchaseReturnHeader.subTotal|default|number_format(2) }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-end" colspan="6"><strong>PPn {{ purchaseReturnHeader.taxPercentage|default }}%</strong></td>
                                    <td class="text-end"><strong>{{ purchaseReturnHeader.taxNominal|default|number_format(2) }}</strong></td>
                                </tr>
                                <tr>
                                    <td class="text-end" colspan="6"><strong>Grand Total</strong></td>
                                    <td class="text-end"><strong>{{ purchaseReturnHeader.grandTotal|default|number_format(2) }}</strong></td>
                                </tr>
                            </tfoot>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-print-none">
    <br />
    {{ grid.navigation(form, count, purchaseReturnHeaders) }}
</div>
