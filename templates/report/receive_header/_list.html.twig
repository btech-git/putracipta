{% import 'app/data_grid.html.twig' as grid %}

<div class="d-print-none">
    {{ grid.form(form) }}

    {{ grid.info(form, count, receiveHeaders) }}

    {#<div class="text-center">
        <button type="button" class="btn btn-info btn-sm" id="export">Export</button>
    </div>#}

    <hr />
</div>

<div class="report">
    <div class="report-header">
        <div class="report-title">PT. Putracipta Karindomas</div>
        <div class="report-title">Laporan Penerimaan Material</div>
        {#<div>
            {% set startDate = grid.searchVals['receiveHeader']['transactionDate'][1]|default %}
            {% set endDate = grid.searchVals['receiveHeader']['transactionDate'][2]|default %}
            {{ startDate ? startDate|date('j F Y') }} &nbsp;&ndash;&nbsp; {{ endDate ? endDate|date('j F Y') }}
        </div>#}
    </div>

    <br />

    <table class="report-data">
        <thead class="border-top-solid-bold border-bottom-solid-bold">
            <tr>
                <th class="text-start">Penerimaan #</th>
                <th class="text-start">Tanggal</th>
                <th class="text-start">PO #</th>
                <th class="text-start">Supplier</th>
                <th class="text-start">SJ #</th>
                <th class="text-start">Tanggal Kirim</th>
                <th class="text-start">Gudang</th>
                <th class="text-start">Note</th>
            </tr>
            <tr>
                <td colspan="8">
                    <table>
                        <thead>
                            <tr>
                                <th class="text-start">Kode</th>
                                <th class="text-start">Nama Produk</th>
                                <th class="text-start">Qty Order</th>
                                <th class="text-start">Qty Terima</th>
                                <th class="text-start">Satuan</th>
                                <th class="text-start">Memo</th>
                            </tr>
                        </thead>
                    </table>
                </td>
            </tr>
        </thead>
        <tbody class="border-top-solid-bold border-bottom-solid-bold">
            {% for receiveHeader in receiveHeaders %}
                <tr>
                    <td class="text-start">{{ receiveHeader.codeNumber|default }}</td>
                    <td class="text-start">{{ receiveHeader.transactionDate|default ? receiveHeader.transactionDate|date('j M Y') }}</td>
                    <td class="text-start">{{ receiveHeader.purchaseOrderHeader is null ? receiveHeader.purchaseOrderPaperHeader.getCodeNumber : receiveHeader.purchaseOrderHeader.getCodeNumber|default }}</td>
                    <td class="text-start">{{ receiveHeader.supplier.company|default }}</td>
                    <td class="text-start">{{ receiveHeader.supplierDeliveryCodeNumber|default }}</td>
                    <td class="text-start">{{ receiveHeader.purchaseOrderHeader is null ? receiveHeader.purchaseOrderPaperHeader.transactionDate ? receiveHeader.purchaseOrderPaperHeader.transactionDate|date('d M Y') : '' : receiveHeader.purchaseOrderHeader.transactionDate ? receiveHeader.purchaseOrderHeader.transactionDate|date('d M Y') : '' }}</td>
                    <td class="text-start">{{ receiveHeader.warehouse.name|default }}</td>
                    <td class="text-start">{{ receiveHeader.note|default }}</td>
                </tr>
                <tr class="border-bottom-dotted-bold">
                    <td colspan="8">
                        <table>
                            <tbody>
                                {% for receiveDetail in receiveHeader.receiveDetails %}
                                    <tr>
                                        <td class="text-start">{{ receiveDetail.material is null ? receiveDetail.paper.codeNumber|default : receiveDetail.material.code|default }}</td>
                                        <td class="text-start">{{ receiveDetail.material is null ? receiveDetail.paper.paperNameSizeCombination|default : receiveDetail.material.name|default }}</td>
                                        <td class="text-center">{{ receiveDetail.purchaseOrderDetail is null ? receiveDetail.purchaseOrderPaperDetail.quantity|default|number_format(0) : receiveDetail.purchaseOrderDetail.quantity|default|number_format(0) }}</td>
                                        <td class="text-center">{{ receiveDetail.receivedQuantity|default|number_format(0) }}</td>
                                        <td class="text-start">{{ receiveDetail.unit.name|default }}</td>
                                        <td class="text-start">{{ receiveDetail.memo|default }}</td>
                                    </tr>
                                {% endfor %}
                            </tbody>
                            <tfoot class="border-top-solid-normal">
                                <tr>
                                    <td class="text-end" colspan="3"><strong>Total Quantity</strong></td>
                                    <td class="text-center"><strong>{{ receiveHeader.totalQuantity|default|number_format(0) }}</strong></td>
                                    <td colspan="2">&nbsp;</td>
                                </tr>
                            </tfoot>
                        </table>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

<div class="d-print-none">
    <br />
    {{ grid.navigation(form, count, receiveHeaders) }}
</div>
