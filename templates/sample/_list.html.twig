{% import 'app/data_grid.html.twig' as grid %}

{{ grid.form(form) }}

{{ grid.info(form, count, samples) }}

<table class="table table-bordered table-striped">
    <thead>
        <tr class="table-primary" {{ grid.sort_link(form) }}>
            <th role="button" {{ grid.sort_link_item(form, 'name') }}>
                Name {{ grid.sort_char(form.sort.name.vars.value) }}
            </th>
            <th role="button" {{ grid.sort_link_item(form, 'price') }}>
                Price {{ grid.sort_char(form.sort.price.vars.value) }}
            </th>
            <th></th>
        </tr>
        <tr class="table-light" {{ grid.filter_link(form) }}>
            <th>
                <input type="text" {{ grid.filter_link_item(form, 'name') }} value="{{ form.filter.name.1.vars.value }}" />
            </th>
            <th>
                <input type="text" {{ grid.filter_link_item(form, 'price') }} value="{{ form.filter.price.1.vars.value }}" />
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        {% for sample in samples %}
            <tr>
                <td>{{ sample.name }}</td>
                <td>{{ sample.price }}</td>
                <td>
                    <a class="btn btn-info btn-sm" href="{{ path('app_sample_show', {'id': sample.id}) }}">Show</a>
                    <a class="btn btn-warning btn-sm" href="{{ path('app_sample_edit', {'id': sample.id}) }}">Edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">No records found</td>
            </tr>
        {% endfor %}
    </tbody>
</table>

{{ grid.navigation(form, count, samples) }}
