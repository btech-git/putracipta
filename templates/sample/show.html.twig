{% extends 'layout_page.html.twig' %}

{% block title 'Show Sample' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_sample_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_sample_edit', {'id': sample.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Name</th>
                <td>{{ sample.name }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ sample.price }}</td>
            </tr>
        </tbody>
    </table>

    <form method="post" action="{{ path('app_sample_delete', {'id': sample.id}) }}" onsubmit="return confirm('Are you sure you want to delete this item?');">
        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sample.id) }}">
        <div class="d-grid" {{ stimulus_controller('submit') }}>
            <button class="btn btn-danger btn-sm">Delete</button>
        </div>
    </form>
{% endblock %}
