{% import 'app/data_grid.html.twig' as grid %}

{{ grid.form(form) }}

{{ grid.info(form, count, designCodes) }}

<div class="table-responsive">
    <table class="table table-bordered table-striped" id="design-code-table" data-controller="data-table">
        <thead>
            <tr class="table-primary" {{ grid.sort_link(form) }}>
                <th>
                    Code Number
                </th>
                <th>
                    Color
                </th>
                <th>
                    Pantone
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'note') }}>
                    Note {{ grid.sort_char(form.sort.note.vars.value) }}
                </th>
            </tr>
            <tr class="table-light" {{ grid.filter_link(form) }}>
                <th></th>
                <th></th>
                <th></th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'note') }} value="{{ form.filter.note.1.vars.value }}" />
                </th>
            </tr>
        </thead>
        <tbody>
            {% for designCode in designCodes %}
                <tr data-action="click->data-table#select" data-data-table-values-param="{{ designCode.designCodeProcessDetails|filter(designCodeProcessDetail => not designCodeProcessDetail.isInactive)|slice(0)|map(designCodeProcessDetail => {
                    'designCodeId': designCode.id, 
                    'designCodeNumber': designCode.codeNumber, 
                    'designCodeColor': designCode.color, 
                    'designCodePantone': designCode.pantone, 
                    'designCodeColorSpecial1': designCode.colorSpecial1, 
                    'designCodeColorSpecial2': designCode.colorSpecial2, 
                    'designCodeColorSpecial3': designCode.colorSpecial3, 
                    'designCodeColorSpecial4': designCode.colorSpecial4, 
                    'designCodeCoating': designCode.coating, 
                    'designCodePrintingUpQuantity': designCode.printingUpQuantity, 
                    'designCodePrintingKrisSize': designCode.printingKrisSize, 
                    'designCodePaperCuttingLength': designCode.paperCuttingLength, 
                    'designCodePaperCuttingWidth': designCode.paperCuttingWidth, 
                    'designCodePaperMountage': designCode.paperMountage, 
                    'designCodeDiecutKnifeCodeNumber': designCode.diecutKnife.codeNumber|default, 
                    'designCodeDiecutKnifeId': designCode.diecutKnife.id|default, 
                    'designCodeDielineMillarCodeNumber': designCode.dielineMillar.codeNumber|default, 
                    'designCodeDielineMillarId': designCode.dielineMillar.id|default, 
                    'designCodeInkCyanPercentage': designCode.inkCyanPercentage, 
                    'designCodeInkMagentaPercentage': designCode.inkMagentaPercentage, 
                    'designCodeInkYellowPercentage': designCode.inkYellowPercentage, 
                    'designCodeInkBlackPercentage': designCode.inkBlackPercentage, 
                    'designCodeInkOpvPercentage': designCode.inkOpvPercentage, 
                    'designCodeInkK1Percentage': designCode.inkK1Percentage, 
                    'designCodeInkK2Percentage': designCode.inkK2Percentage, 
                    'designCodeInkK3Percentage': designCode.inkK3Percentage, 
                    'designCodeInkK4Percentage': designCode.inkK4Percentage, 
                    'designCodePackagingGlueQuantity': designCode.packagingGlueQuantity, 
                    'designCodePackagingRubberQuantity': designCode.packagingRubberQuantity, 
                    'designCodePackagingPaperQuantity': designCode.packagingPaperQuantity, 
                    'designCodePackagingBoxQuantity': designCode.packagingBoxQuantity, 
                    'designCodePackagingTapeLargeQuantity': designCode.packagingTapeLargeQuantity, 
                    'designCodePackagingTapeSmallQuantity': designCode.packagingTapeSmallQuantity, 
                    'designCodePackagingPlasticQuantity': designCode.packagingPlasticQuantity, 
                    'designCodeInsitPrintingPercentage': designCode.insitPrintingPercentage, 
                    'designCodeInsitSortingPercentage': designCode.insitSortingPercentage, 
                    'designCodeColorPantoneAdditional': designCode.colorPantoneAdditional,
                    'designCodeHotStamping': designCode.hotStamping, 
                    'designCodeProcessDetailId': designCodeProcessDetail.id, 
                    'workOrderProcessId': designCodeProcessDetail.workOrderProcess.id, 
                    'workOrderProcessName': designCodeProcessDetail.workOrderProcess.name, 
                    'designCodeNote': designCode.note})|json_encode }}">
                    <td>{{ designCode.codeNumber }}</td>
                    <td>{{ designCode.color }}</td>
                    <td>{{ designCode.pantone }}</td>
                    <td>{{ designCode.note }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="4">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ grid.navigation(form, count, designCodes) }}
