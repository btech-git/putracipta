{% import 'app/data_grid.html.twig' as grid %}

{{ grid.form(form) }}

{{ grid.info(form, count, designCodes) }}

<div class="table-responsive">
    <table class="table table-bordered table-striped" id="design-code-table" data-controller="data-table">
        <thead>
            <tr class="table-primary" {{ grid.sort_link(form) }}>
                <th role="button" {{ grid.sort_link_item(form, 'name') }}>
                    Name {{ grid.sort_char(form.sort.name.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'version') }}>
                    Version {{ grid.sort_char(form.sort.version.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'note') }}>
                    Note {{ grid.sort_char(form.sort.note.vars.value) }}
                </th>
            </tr>
            <tr class="table-light" {{ grid.filter_link(form) }}>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'name') }} value="{{ form.filter.name.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'version') }} value="{{ form.filter.version.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'note') }} value="{{ form.filter.note.1.vars.value }}" />
                </th>
            </tr>
        </thead>
        <tbody>
            {% for designCode in designCodes %}
                <tr data-action="click->data-table#select" data-data-table-values-param="{{ {
                    'designCodeId': designCode.id, 
                    'designCodeVersion': designCode.version, 
                    'designCodeName': designCode.name, 
                    'designCodeNote': designCode.note}|json_encode }}">
                    <td>{{ designCode.name }}</td>
                    <td>{{ designCode.version }}</td>
                    <td>{{ designCode.note }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ grid.navigation(form, count, designCodes) }}
