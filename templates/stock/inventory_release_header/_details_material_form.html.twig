<div class="table-responsive">
    <table class="table table-bordered"
       data-controller="form-collection"
       data-form-collection-start-index-value="{{ form.inventoryReleaseMaterialDetails|length > 0 ? form.inventoryReleaseMaterialDetails|last.vars.name + 1 : 0 }}"
       data-form-collection-prototype-value="{{ _self.collection_item(form.inventoryReleaseMaterialDetails.vars.prototype, form)|e('html_attr') }}"
       data-action="form-collection:collection-item-removed->json-loader#load:self">
        <thead class="table-secondary">
            <tr>
                <th class="d-none">Request Id</th>
                <th class="d-none">Material Id</th>
                <th style="min-width: 250px">Kode</th>
                <th style="min-width: 250px">Nama Barang</th>
                <th style="min-width: 100px">Qty Request</th>
                <th style="min-width: 100px">Qty</th>
                <th style="min-width: 100px">Satuan</th>
                <th style="min-width: 100px">Keterangan</th>
                <th style="min-width: 0"></th>
            </tr>
        </thead>
        <tbody data-form-collection-target="items" data-action="inventory-request-header-table:data-table:select@document->form-collection#clearCollectionItems inventory-request-header-table:data-table:select@document->form-collection#addCollectionItems"
               data-form-collection-add-items-matching-field-path-param="0.inventoryRequestHeaderMode"
               data-form-collection-add-items-matching-field-path-value-param="material"
               data-form-collection-clear-items-matching-field-path-param="0.inventoryRequestHeaderMode"
               data-form-collection-clear-items-matching-field-path-value-param="paper">
            {% macro collection_item(detailForm, form) %}
                <tr data-form-collection-target="item" {% if (detailForm.vars.value.isCanceled) %}class="bg-secondary"{% endif %}>
                    <td class="d-none">{{ form_widget(detailForm.inventoryRequestMaterialDetail , {'attr': {'data-item-field-name': 'inventoryRequestMaterialDetailId'}}) }}</td>
                    <td class="d-none">{{ form_widget(detailForm.material, {'attr': {'data-item-field-name': 'materialId'}}) }}</td>
                    <td data-item-field-name="materialCode">{{ detailForm.vars.value.material.code|default }}</td>
                    <td data-item-field-name="materialName">{{ detailForm.vars.value.material.name|default }}</td>
                    <td data-item-field-name="inventoryRequestMaterialDetailQuantity">{{ detailForm.vars.value.inventoryRequestMaterialDetail.quantity|default|number_format(0) }}</td>
                    <td>
                        {{ form_row(detailForm.quantity, {'label': false, 'attr': {
                            'size': 3,
                            'data-controller': 'dom-element',
                            'data-action': 'change->dom-element#bind change->json-loader#load',
                            'data-dom-element-bind-specifications-param': [
                                {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$helper.localizer.number($element.value, 0)'}}
                            ]|json_encode,
                        }}) }}
                    </td>
                    <td data-item-field-name="materialUnitName">{{ detailForm.vars.value.unit.name|default }}</td>
                    <td>{{ form_row(detailForm.memo, {'label': false, 'attr': {'size': 3}}) }}</td>
                    <td>
                        <div {% if (detailForm.vars.value.id == null) %}class="d-none"{% endif %}>
                            {{ form_row(detailForm.isCanceled, {
                                'label': 'X',
                                'attr': {
                                    'data-controller': 'dom-element',
                                    'data-action': 'dom-element#bind change->json-loader#load',
                                    'data-dom-element-bind-specifications-param': [
                                        {'destinationsTarget': "table tr[data-item-identifier-value=\"#{detailForm.vars.value.material.id|default}\"]", 'action': 'removeClass', 'descriptor': {'name': 'bg-secondary'}, 'condition': '!$element.checked'},
                                        {'destinationsTarget': "table tr[data-item-identifier-value=\"#{detailForm.vars.value.material.id|default}\"]", 'action': 'addClass', 'descriptor': {'name': 'bg-secondary'}, 'condition': '$element.checked'},
                                    ]|json_encode,
                                },
                            }) }}
                        </div>
                    </td>
                </tr>
            {% endmacro %}
            {% for detailForm in form.inventoryReleaseMaterialDetails %}
                {{ _self.collection_item(detailForm, form) }}
            {% endfor %}
        </tbody>
    </table>
</div>
