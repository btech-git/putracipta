{% extends 'layout_page.html.twig' %}

{% block title 'Show Inventory Request Header' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_stock_inventory_request_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_stock_inventory_request_header_edit', {'id': inventoryRequestHeader.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Total Quantity</th>
                <td>{{ inventoryRequestHeader.totalQuantity }}</td>
            </tr>
            <tr>
                <th>Department Name</th>
                <td>{{ inventoryRequestHeader.departmentName }}</td>
            </tr>
            <tr>
                <th>Work Order Number</th>
                <td>{{ inventoryRequestHeader.workOrderNumber }}</td>
            </tr>
            <tr>
                <th>Part Number</th>
                <td>{{ inventoryRequestHeader.partNumber }}</td>
            </tr>
            <tr>
                <th>Pickup Date</th>
                <td>{{ inventoryRequestHeader.pickupDate ? inventoryRequestHeader.pickupDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Total Quantity Remaining</th>
                <td>{{ inventoryRequestHeader.totalQuantityRemaining }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ inventoryRequestHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Code Number Ordinal</th>
                <td>{{ inventoryRequestHeader.codeNumberOrdinal }}</td>
            </tr>
            <tr>
                <th>Code Number Month</th>
                <td>{{ inventoryRequestHeader.codeNumberMonth }}</td>
            </tr>
            <tr>
                <th>Code Number Year</th>
                <td>{{ inventoryRequestHeader.codeNumberYear }}</td>
            </tr>
            <tr>
                <th>Created Transaction Date Time</th>
                <td>{{ inventoryRequestHeader.createdTransactionDateTime ? inventoryRequestHeader.createdTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified Transaction Date Time</th>
                <td>{{ inventoryRequestHeader.modifiedTransactionDateTime ? inventoryRequestHeader.modifiedTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Transaction Date</th>
                <td>{{ inventoryRequestHeader.transactionDate ? inventoryRequestHeader.transactionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ inventoryRequestHeader.note }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('stock/inventory_request_header/_delete_form.html.twig') }}
{% endblock %}
