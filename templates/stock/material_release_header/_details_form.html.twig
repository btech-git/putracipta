<div class="table-responsive">
    <table class="table table-bordered"
       data-controller="form-collection"
       data-form-collection-start-index-value="{{ form.materialReleaseDetails|length > 0 ? form.materialReleaseDetails|last.vars.name + 1 : 0 }}"
       data-form-collection-prototype-value="{{ _self.collection_item(form.materialReleaseDetails.vars.prototype)|e('html_attr') }}"
       data-action="form-collection:collection-item-removed->json-loader#load:self">
        <thead class="table-secondary">
            <tr>
                <th class="d-none">Material Id</th>
                <th style="min-width: 150px">Item Code</th>
                <th style="min-width: 250px">Description</th>
                <th style="min-width: 110px">Qty</th>
                <th style="min-width: 110px">Unit</th>
                <th style="min-width: 150px">Keterangan</th>
                <th style="width: 0"></th>
            </tr>
        </thead>
        <tbody data-form-collection-target="items" data-action="material-request-header-table:data-table:select@document->form-collection#clearCollectionItems material-request-header-table:data-table:select@document->form-collection#addCollectionItems material-request-header-table:data-table:select@document->json-loader#load">
            {% macro collection_item(detailForm) %}
                <tr data-form-collection-target="item" data-item-identifier-name="materialRequestDetailId" data-item-identifier-value="{{ detailForm.vars.value.materialRequestDetail.id|default }}" {% if (detailForm.vars.value.isCanceled) %}class="bg-secondary"{% endif %}>
                    <td class="d-none">{{ form_widget(detailForm.materialRequestDetail, {'attr': {'data-item-field-name': 'materialRequestDetailId'}}) }}</td>
                    <td data-item-field-name="materialCode">
                        {{ detailForm.vars.value.material.code|default }}
                    </td>
                    <td data-item-field-name="materialName">
                        {{ detailForm.vars.value.material.name|default }}
                    </td>
                    <td>
                        {{ form_row(detailForm.quantity, {'label': false, 'attr': {
                            'data-action': 'change->json-loader#load',
                            'data-item-field-name': 'materialRequestDetailQuantity',
                        }}) }}
                    </td>
                    <td>
                        {{ form_row(detailForm.unit, {'label': false, 'attr': {
                            'data-item-field-name': 'unitId',
                        }}) }}
                    </td>
                    <td>
                        {{ form_row(detailForm.memo, {'label': false}) }}
                    </td>
                    <td>
                        <div {% if (detailForm.vars.value.id == null) %}class="d-none"{% endif %}>
                            {{ form_row(detailForm.isCanceled, {
                                'label': 'X',
                                'attr': {
                                    'data-controller': 'dom-element',
                                    'data-action': 'dom-element#bind change->json-loader#load',
                                    'data-dom-element-bind-specifications-param': [
                                        {'destinationsTarget': "table tr[data-item-identifier-value=\"#{detailForm.vars.value.materialRequestDetail.id|default}\"]", 'action': 'removeClass', 'descriptor': {'name': 'bg-secondary'}, 'condition': '!$element.checked'},
                                        {'destinationsTarget': "table tr[data-item-identifier-value=\"#{detailForm.vars.value.materialRequestDetail.id|default}\"]", 'action': 'addClass', 'descriptor': {'name': 'bg-secondary'}, 'condition': '$element.checked'},
                                    ]|json_encode,
                                },
                            }) }}
                        </div>
                    </td>
                </tr>
            {% endmacro %}
            {% for detailForm in form.materialReleaseDetails %}
                {{ _self.collection_item(detailForm) }}
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td class="text-end" colspan="2">Total Quantity</td>
                <td class="text-center" data-json-loader-target="placeholder"
                    data-property-path="totalQuantity">
                    {{ materialReleaseHeader.totalQuantity|default|number_format(0) }}
                </td>
                <td colspan="3"></td>
            </tr>
        </tfoot>
    </table>
</div>
