<div data-controller="event-emitter json-loader"
     data-action="data-table:select->event-emitter#forward"
     data-event-emitter-attributes-list-param="{{ {'data-table:select': 'id'}|json_encode }}"
     data-json-loader-url-value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': 'json'})) }}"
     data-json-loader-method-value="POST"
     data-json-loader-form-target-value="{{ "form[name=#{form.vars.name}]" }}">

    {{ form_start(form) }}
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Header</legend>
            <div class="row">
                <div class="col">
                    {{ form_row(form.transactionDate, {'label': 'Tanggal', 'attr': {'data-controller': 'flatpickr-element'}}) }}
                    <div class="mb-3">
                        <label class="form-label">Departemen</label>
                        <input type="text" class="form-control" value="{{ materialReleaseHeader.materialRequestHeader.departmentName|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="material-request-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].materialRequestHeaderDepartment'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Part #</label>
                        <input type="text" class="form-control" value="{{ materialReleaseHeader.materialRequestHeader.partNumber|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="material-request-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].materialRequestHeaderPartNumber'}},
                               ]|json_encode }}" />
                    </div>
                </div>
                <div class="col">
                    <div class="mb-3">
                        <label for="{{ form.materialRequestHeader.vars.id }}-text" class="form-label">Material Request #</label>
                        {{ form_row(form.materialRequestHeader, {
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'material-request-header-table:data-table:select@document->dom-element#bind',
                                'data-dom-element-bind-specifications-param': [
                                    {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].materialRequestHeaderId'}},
                                ]|json_encode,
                            },
                        }) }}
                        <input type="text" id="{{ form.materialRequestHeader.vars.id }}-text" class="form-control {% if not form.materialRequestHeader.vars.valid %}is-invalid{% endif %}" value="{{ materialReleaseHeader.materialRequestHeader.codeNumber|default }}" readonly="readonly"
                               data-bs-toggle="modal" data-bs-target="#material-request-header-dialog"
                               data-controller="dom-element"
                               data-action="material-request-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].materialRequestHeaderCodeNumber'}},
                               ]|json_encode }}" />
                        {{ form_errors(form.materialRequestHeader) }}
                    </div>
                    <div class="mb-3">
                        <label class="form-label">Tanggal Request</label>
                        <input type="text" class="form-control" value="{{ materialReleaseHeader.materialRequestHeader.transactionDate|default ? materialReleaseHeader.materialRequestHeader.transactionDate|date('d M Y') : '' }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="material-request-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].materialRequestHeaderTransactionDate'}},
                               ]|json_encode }}" />
                    </div>
                    <div class="mb-3">
                        <label class="form-label">WO #</label>
                        <input type="text" class="form-control" value="{{ materialReleaseHeader.materialRequestHeader.workOrderNumber|default }}" readonly="readonly"
                               data-controller="dom-element"
                               data-action="material-request-header-table:data-table:select@document->dom-element#bind"
                               data-dom-element-bind-specifications-param="{{ [
                                   {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail[0].materialRequestHeaderWorkOrderNumber'}},
                               ]|json_encode }}" />
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col">
                    {{ form_row(form.note) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Details</legend>
            {{ include('stock/material_release_header/_details_form.html.twig') }}
        </fieldset>

        <div class="d-grid">
            <button class="btn btn-success"
                    data-controller="dom-element"
                    data-action="dom-element#confirm"
                    data-dom-element-confirm-message-param="Are you sure you want to save this transaction?">
                Save
            </button>
        </div>
    {{ form_end(form) }}

    {% import 'app/bootstrap_dialog.html.twig' as dialog %}

    {{ dialog.start('material-request-header-dialog', 'Material Request List') }}
        <div data-controller="html-loader"
             data-html-loader-url-value="{{ path('app_shared_material_request_header__list') }}"
             data-html-loader-auto-load-value="true">
        </div>
    {{ dialog.end() }}
</div>
