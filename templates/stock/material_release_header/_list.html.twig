{% import 'app/data_grid.html.twig' as grid %}

{{ grid.form(form) }}

{{ grid.info(form, count, materialReleaseHeaders) }}

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-primary" {{ grid.sort_link(form) }}>
                <th role="button" {{ grid.sort_link_item(form, 'totalQuantity') }}>
                    Total Quantity {{ grid.sort_char(form.sort.totalQuantity.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'departmentName') }}>
                    Department Name {{ grid.sort_char(form.sort.departmentName.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'workOrderNumber') }}>
                    Work Order Number {{ grid.sort_char(form.sort.workOrderNumber.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'partNumber') }}>
                    Part Number {{ grid.sort_char(form.sort.partNumber.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'isCanceled') }}>
                    Is Canceled {{ grid.sort_char(form.sort.isCanceled.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'codeNumberOrdinal') }}>
                    Code Number Ordinal {{ grid.sort_char(form.sort.codeNumberOrdinal.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'codeNumberMonth') }}>
                    Code Number Month {{ grid.sort_char(form.sort.codeNumberMonth.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'codeNumberYear') }}>
                    Code Number Year {{ grid.sort_char(form.sort.codeNumberYear.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'createdTransactionDateTime') }}>
                    Created Transaction Date Time {{ grid.sort_char(form.sort.createdTransactionDateTime.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'modifiedTransactionDateTime') }}>
                    Modified Transaction Date Time {{ grid.sort_char(form.sort.modifiedTransactionDateTime.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'transactionDate') }}>
                    Transaction Date {{ grid.sort_char(form.sort.transactionDate.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'note') }}>
                    Note {{ grid.sort_char(form.sort.note.vars.value) }}
                </th>
                <th></th>
            </tr>
            <tr class="table-light" {{ grid.filter_link(form) }}>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'totalQuantity') }} value="{{ form.filter.totalQuantity.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'departmentName') }} value="{{ form.filter.departmentName.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'workOrderNumber') }} value="{{ form.filter.workOrderNumber.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'partNumber') }} value="{{ form.filter.partNumber.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'isCanceled') }} value="{{ form.filter.isCanceled.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'codeNumberOrdinal') }} value="{{ form.filter.codeNumberOrdinal.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'codeNumberMonth') }} value="{{ form.filter.codeNumberMonth.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'codeNumberYear') }} value="{{ form.filter.codeNumberYear.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'createdTransactionDateTime') }} value="{{ form.filter.createdTransactionDateTime.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'modifiedTransactionDateTime') }} value="{{ form.filter.modifiedTransactionDateTime.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'transactionDate') }} value="{{ form.filter.transactionDate.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'note') }} value="{{ form.filter.note.1.vars.value }}" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for materialReleaseHeader in materialReleaseHeaders %}
                <tr>
                    <td>{{ materialReleaseHeader.totalQuantity }}</td>
                    <td>{{ materialReleaseHeader.departmentName }}</td>
                    <td>{{ materialReleaseHeader.workOrderNumber }}</td>
                    <td>{{ materialReleaseHeader.partNumber }}</td>
                    <td>{{ materialReleaseHeader.isCanceled ? 'Yes' : 'No' }}</td>
                    <td>{{ materialReleaseHeader.codeNumberOrdinal }}</td>
                    <td>{{ materialReleaseHeader.codeNumberMonth }}</td>
                    <td>{{ materialReleaseHeader.codeNumberYear }}</td>
                    <td>{{ materialReleaseHeader.createdTransactionDateTime ? materialReleaseHeader.createdTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ materialReleaseHeader.modifiedTransactionDateTime ? materialReleaseHeader.modifiedTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
                    <td>{{ materialReleaseHeader.transactionDate ? materialReleaseHeader.transactionDate|date('Y-m-d') : '' }}</td>
                    <td>{{ materialReleaseHeader.note }}</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="{{ path('app_stock_material_release_header_show', {'id': materialReleaseHeader.id}) }}">Show</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('app_stock_material_release_header_edit', {'id': materialReleaseHeader.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="13">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ grid.navigation(form, count, materialReleaseHeaders) }}
