{% import 'app/data_grid.html.twig' as grid %}

{{ grid.form(form) }}

{{ grid.info(form, count, purchaseInvoiceDetails) }}

<div class="table-responsive">
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="table-primary" {{ grid.sort_link(form) }}>
                <th role="button" {{ grid.sort_link_item(form, 'quantity') }}>
                    Quantity {{ grid.sort_char(form.sort.quantity.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'unitPrice') }}>
                    Unit Price {{ grid.sort_char(form.sort.unitPrice.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'discount') }}>
                    Discount {{ grid.sort_char(form.sort.discount.vars.value) }}
                </th>
                <th role="button" {{ grid.sort_link_item(form, 'isCanceled') }}>
                    Is Canceled {{ grid.sort_char(form.sort.isCanceled.vars.value) }}
                </th>
                <th></th>
            </tr>
            <tr class="table-light" {{ grid.filter_link(form) }}>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'quantity') }} value="{{ form.filter.quantity.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'unitPrice') }} value="{{ form.filter.unitPrice.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'discount') }} value="{{ form.filter.discount.1.vars.value }}" />
                </th>
                <th>
                    <input type="text" {{ grid.filter_link_item(form, 'isCanceled') }} value="{{ form.filter.isCanceled.1.vars.value }}" />
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for purchaseInvoiceDetail in purchaseInvoiceDetails %}
                <tr>
                    <td>{{ purchaseInvoiceDetail.quantity }}</td>
                    <td>{{ purchaseInvoiceDetail.unitPrice }}</td>
                    <td>{{ purchaseInvoiceDetail.discount }}</td>
                    <td>{{ purchaseInvoiceDetail.isCanceled ? 'Yes' : 'No' }}</td>
                    <td>
                        <a class="btn btn-info btn-sm" href="{{ path('app_transaction_purchase_invoice_detail_show', {'id': purchaseInvoiceDetail.id}) }}">Show</a>
                        <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_invoice_detail_edit', {'id': purchaseInvoiceDetail.id}) }}">Edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="5">No records found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>

{{ grid.navigation(form, count, purchaseInvoiceDetails) }}
