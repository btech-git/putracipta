{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Invoice Detail' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_invoice_detail_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_invoice_detail_edit', {'id': purchaseInvoiceDetail.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Quantity</th>
                <td>{{ purchaseInvoiceDetail.quantity }}</td>
            </tr>
            <tr>
                <th>Unit Price</th>
                <td>{{ purchaseInvoiceDetail.unitPrice }}</td>
            </tr>
            <tr>
                <th>Discount</th>
                <td>{{ purchaseInvoiceDetail.discount }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ purchaseInvoiceDetail.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('transaction/purchase_invoice_detail/_delete_form.html.twig') }}
{% endblock %}
