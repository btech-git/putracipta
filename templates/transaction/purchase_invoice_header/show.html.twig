{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Invoice Header' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_invoice_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_invoice_header_edit', {'id': purchaseInvoiceHeader.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code Number Ordinal</th>
                <td>{{ purchaseInvoiceHeader.codeNumberOrdinal }}</td>
            </tr>
            <tr>
                <th>Code Number Month</th>
                <td>{{ purchaseInvoiceHeader.codeNumberMonth }}</td>
            </tr>
            <tr>
                <th>Code Number Year</th>
                <td>{{ purchaseInvoiceHeader.codeNumberYear }}</td>
            </tr>
            <tr>
                <th>Transaction Date</th>
                <td>{{ purchaseInvoiceHeader.transactionDate ? purchaseInvoiceHeader.transactionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Invoice Tax Code Number</th>
                <td>{{ purchaseInvoiceHeader.invoiceTaxCodeNumber }}</td>
            </tr>
            <tr>
                <th>Supplier Invoice Code Number</th>
                <td>{{ purchaseInvoiceHeader.supplierInvoiceCodeNumber }}</td>
            </tr>
            <tr>
                <th>Discount Value Type</th>
                <td>{{ purchaseInvoiceHeader.discountValueType }}</td>
            </tr>
            <tr>
                <th>Discount Value</th>
                <td>{{ purchaseInvoiceHeader.discountValue }}</td>
            </tr>
            <tr>
                <th>Tax Mode</th>
                <td>{{ purchaseInvoiceHeader.taxMode }}</td>
            </tr>
            <tr>
                <th>Tax Percentage</th>
                <td>{{ purchaseInvoiceHeader.taxPercentage }}</td>
            </tr>
            <tr>
                <th>Tax Nominal</th>
                <td>{{ purchaseInvoiceHeader.taxNominal }}</td>
            </tr>
            <tr>
                <th>Shipping Fee</th>
                <td>{{ purchaseInvoiceHeader.shippingFee }}</td>
            </tr>
            <tr>
                <th>Sub Total</th>
                <td>{{ purchaseInvoiceHeader.subTotal }}</td>
            </tr>
            <tr>
                <th>Sub Total After Tax Inclusion</th>
                <td>{{ purchaseInvoiceHeader.subTotalAfterTaxInclusion }}</td>
            </tr>
            <tr>
                <th>Grand Total</th>
                <td>{{ purchaseInvoiceHeader.grandTotal }}</td>
            </tr>
            <tr>
                <th>Total Payment</th>
                <td>{{ purchaseInvoiceHeader.totalPayment }}</td>
            </tr>
            <tr>
                <th>Total Return</th>
                <td>{{ purchaseInvoiceHeader.totalReturn }}</td>
            </tr>
            <tr>
                <th>Remaining Payment</th>
                <td>{{ purchaseInvoiceHeader.remainingPayment }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ purchaseInvoiceHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchaseInvoiceHeader.note }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('transaction/purchase_invoice_header/_delete_form.html.twig') }}
{% endblock %}
