<table class="table table-bordered" data-controller="form-collection" data-form-collection-prototype-value="{{ _self.collection_item(form.purchaseOrderDetails.vars.prototype)|e('html_attr') }}">
    <thead class="table-secondary">
        <tr>
            <th class="d-none">Product Id</th>
            <th>Product Name</th>
            <th>Size</th>
            <th>Brand</th>
            <th>Qty</th>
            <th>Price</th>
            <th>Discount</th>
            <th>Total</th>
            <th style="width: 0">
                <button type="button" class="btn btn-outline-dark" data-action="form-collection#addItem">Add</button>
            </th>
        </tr>
    </thead>
    <tbody data-form-collection-target="rows" data-action="data-table:select@document->form-collection#addItem">
        {% macro collection_item(detailForm) %}
            <tr data-form-collection-target="row">
                <td class="d-none">{{ form_widget(detailForm.product) }}</td>
                <td></td>
                <td></td>
                <td></td>
                <td>{{ form_widget(detailForm.quantity) }}</td>
                <td>{{ form_widget(detailForm.unitPrice) }}</td>
                <td>{{ form_widget(detailForm.discount) }}</td>
                <td></td>
                <td style="width: 0">
                    <button type="button" class="btn btn-outline-dark" data-action="form-collection#removeItem">Remove</button>
                </td>
            </tr>
        {% endmacro %}
        {% for detailForm in form.purchaseOrderDetails %}
            {{ _self.collection_item(detailForm) }}
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td class="text-end" colspan="6">Sub Total</td>
            <td class="text-end">{{ purchaseInvoiceHeader.subTotal|default|number_format(2) }}</td>
            <td></td>
        </tr>
        <tr>
            <td class="text-end" colspan="6">
                <span style="display: inline-block">Discount</span>
                <span style="display: inline-block">{{ form_widget(form.discountType) }}{{ form_errors(form.discountType) }}</span>
            </td>
            <td>{{ form_widget(form.discountValue) }}{{ form_errors(form.discountValue) }}</td>
            <td></td>
        </tr>
        <tr>
            <td class="text-end" colspan="6">
                <span style="display: inline-block">{{ form_row(form.isTaxApplicable, {'label': false}) }}</span>
            </td>
            <td class="text-end">{{ purchaseInvoiceHeader.taxNominal|default|number_format(2) }}</td>
            <td></td>
        </tr>
        <tr>
            <td class="text-end" colspan="6">Ongkos Kirim</td>
            <td>{{ form_widget(form.shippingFee) }}{{ form_errors(form.shippingFee) }}</td>
            <td></td>
        </tr>
        <tr>
            <td class="text-end" colspan="6">Grand Total</td>
            <td class="text-end">{{ purchaseInvoiceHeader.grandTotal|default|number_format(2) }}</td>
            <td></td>
        </tr>
    </tfoot>
</table>
