<div data-controller="event-emitter json-loader"
     data-action="data-table:select->event-emitter#forward"
     data-event-emitter-attributes-list-param="{{ {'data-table:select': 'id'}|json_encode }}"
     data-json-loader-url-value="{{ path(app.request.attributes.get('_route'), app.request.attributes.get('_route_params')|merge({'_format': 'json'})) }}"
     data-json-loader-method-value="POST"
     data-json-loader-form-target-value="{{ "form[name=#{form.vars.name}]" }}">

    {{ form_start(form) }}
        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Header</legend>
            <div class="row">
                <div class="col sm-6">
                    {{ form_row(form.transactionDate, {'attr': {'data-controller': 'flatpickr-element'}}) }}
                </div>
                <div class="col sm-6">
                    {{ form_row(form.supplier, {
                        'attr': {
                            'data-bs-toggle': 'modal',
                            'data-bs-target': '#supplier-dialog',
                            'data-controller': 'dom-element',
                            'data-action': 'mousedown->dom-element#doNothing:prevent supplier-table:data-table:select@document->dom-element#bind',
                            'data-dom-element-bind-specifications-param': [
                                {'action': 'putHtmlContent', 'descriptor': {'mode': 'append', 'content': '`<option value="${$event.detail.id}">${$event.detail.name}</option>`'}, 'condition': '!$destination.innerHTML.includes($content)'},
                                {'action': 'setPropertyValue', 'descriptor': {'property': 'value', 'value': '$event.detail.id'}}
                            ]|json_encode,
                        },
                    }) }}
                </div>
            </div>
            <div class="row">
                <div class="col sm-12">
                    {{ form_row(form.note) }}
                </div>
            </div>
        </fieldset>

        <fieldset class="border border-secondary rounded mb-3 p-3">
            <legend class="float-none w-auto text-dark px-1">Details</legend>
            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#product-dialog">Add Detail</button>
            {{ include('transaction/purchase_order_header/_details_form.html.twig') }}
        </fieldset>

        <div class="d-grid">
            <button class="btn btn-secondary">Save</button>
        </div>
    {{ form_end(form) }}

    <div id="supplier-dialog" class="modal fade" role="dialog" data-controller="bootstrap-modal" data-action="data-table:select@document->bootstrap-modal#close">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Supplier List</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div data-controller="html-loader"
                         data-html-loader-url-value="{{ path('app_shared_supplier__list') }}"
                         data-html-loader-auto-load-value="true">
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div id="product-dialog" class="modal fade" role="dialog" data-controller="bootstrap-modal" data-action="data-table:select@document->bootstrap-modal#close">
        <div class="modal-dialog modal-lg">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Product List</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <div data-controller="html-loader"
                         data-html-loader-url-value="{{ path('app_shared_product__list') }}"
                         data-html-loader-auto-load-value="true">
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
