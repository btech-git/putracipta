{{ form_start(form) }}
    <div class="row">
        <div class="col sm-6">
            {{ form_row(form.transactionDate) }}
            {{ form_row(form.note) }}
        </div>
        <div class="col sm-6">
            {{ form_row(form.supplier) }}
            <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#supplier-dialog">Browse</button>
            <span id="abc"></span>
        </div>
    </div>

    <hr />

    <button type="button" class="btn btn-sm btn-outline-dark" data-bs-toggle="modal" data-bs-target="#product-dialog">Add Detail</button>

    <div id="prototype" data-cs-index="{{ form.purchaseOrderDetails|length > 0 ? form.purchaseOrderDetails|last.vars.name + 1 : 0 }}" data-cs-prototype="{{ form_widget(form.purchaseOrderDetails.vars.prototype)|e }}"></div>
    <div id="ajax">
        {{ include('transaction/purchase_order_header/_details_form.html.twig') }}
    </div>

    <div class="d-grid">
        <button class="btn btn-secondary">Save</button>
    </div>
{{ form_end(form) }}

<div id="supplier-dialog" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Supplier List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="supplier-grid">
                    <table class="table table-bordered" {{ stimulus_controller('modal-data-table') }}>
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr {{ stimulus_action('modal-data-table', 'select', 'click', {value: 1, text: 'aaa', values: [['#a', '1'], ['#b', '2']]}) }}>
                                <td>a</td>
                                <td>aaa</td>
                            </tr>
                            <tr {{ stimulus_action('modal-data-table', 'select', 'click', {value: 2, text: 'bbb', values: [['#a', '1'], ['#b', '2']]}) }}>
                                <td>b</td>
                                <td>bbb</td>
                            </tr>
                            <tr {{ stimulus_action('modal-data-table', 'select', 'click', {value: 3, text: 'ccc', values: [['#a', '1'], ['#b', '2']]}) }}>
                                <td>c</td>
                                <td>ccc</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<div id="product-dialog" class="modal fade" role="dialog">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title">Product List</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
            <div class="modal-body">
                <div id="product-grid">
                    {% set options = {url: path('app_transaction_purchase_order_header_new', {_format: 'json'})} %}
                    <table class="table table-bordered" {{ stimulus_controller('modal-data-table-prototype', options) }}>
                        <thead>
                            <tr>
                                <th>Code</th>
                                <th>Name</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr {{ stimulus_action('modal-data-table-prototype', 'select', 'click', {value: 1, text: 'aaa'}) }}>
                                <td>a</td>
                                <td>aaa</td>
                            </tr>
                            <tr {{ stimulus_action('modal-data-table-prototype', 'select', 'click', {value: 2, text: 'bbb'}) }}>
                                <td>b</td>
                                <td>bbb</td>
                            </tr>
                            <tr {{ stimulus_action('modal-data-table-prototype', 'select', 'click', {value: 3, text: 'ccc'}) }}>
                                <td>c</td>
                                <td>ccc</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
