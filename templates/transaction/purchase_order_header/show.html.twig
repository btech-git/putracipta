{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Order' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_order_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_order_header_edit', {'id': purchaseOrderHeader.id}) }}">Edit</a>
    <a class="btn btn-success btn-sm" href="{{ path('app_transaction_purchase_order_header_new') }}">Add</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>PO #</th>
                <td>{{ purchaseOrderHeader.getCodeNumber }}</td>
            </tr>
            <tr>
                <th>Tanggal PO</th>
                <td>{{ purchaseOrderHeader.transactionDate ? purchaseOrderHeader.transactionDate|date('d M Y') : '' }}</td>
            </tr>
            <tr>
                <th>Supplier</th>
                <td>{{ purchaseOrderHeader.supplier.company|default }}</td>
            </tr>
            <tr>
                <th>TOP (days)</th>
                <td>{{ purchaseOrderHeader.supplier.paymentTerm|default }}</td>
            </tr>
            <tr>
                <th>Currency</th>
                <td>{{ purchaseOrderHeader.supplier.currency.name|default }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ purchaseOrderHeader.transactionStatus }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchaseOrderHeader.note }}</td>
            </tr>
            <tr>
                <th>Transaction On Hold?</th>
                <td>{{ purchaseOrderHeader.isOnHold ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Transaction Canceled?</th>
                <td>{{ purchaseOrderHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered table-striped">
        <thead>
            <tr class="bg-info">
                <th>Item Code</th>
                <th>Description</th>
                <th>Tanggal Kirim</th>
                <th>Quantity</th>
                <th>Satuan</th>
                <th>Harga</th>
                <th>DPP</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for purchaseOrderDetail in purchaseOrderHeader.purchaseOrderDetails %}
                <tr>
                    <td>{{ purchaseOrderDetail.material.code|default }}</td>
                    <td>{{ purchaseOrderDetail.material.name|default }}</td>
                    <td>{{ purchaseOrderDetail.deliveryDate ? purchaseOrderDetail.deliveryDate|date('d M Y') : '' }}</td>
                    <td style="text-align: right">{{ purchaseOrderDetail.quantity|default }}</td>
                    <td>{{ purchaseOrderDetail.unit.name|default }}</td>
                    <td style="text-align: right">{{ purchaseOrderDetail.unitPrice|default|number_format(2) }}</td>
                    <td style="text-align: right">{{ purchaseOrderDetail.unitPriceBeforeTax|default|number_format(2) }}</td>
                    <td style="text-align: right">{{ purchaseOrderDetail.total|default|number_format(2) }}</td>
                    <td>{{ purchaseOrderDetail.isCanceled ? 'Canceled' : '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="7" style="text-align: right"><strong>Sub Total</strong></td>
                <td style="text-align: right"><strong>{{ purchaseOrderHeader.subTotal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="7" style="text-align: right"><strong>Disc {{ purchaseOrderHeader.discountValue|default }}%</strong></td>
                <td style="text-align: right"><strong>{{ purchaseOrderHeader.discountNominal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="7" style="text-align: right">
                    <strong>
                        {% if purchaseOrderHeader.taxMode == constant('TAX_MODE_NON_TAX', purchaseOrderHeader) %}
                            Non PPn 0%
                        {% elseif purchaseOrderHeader.taxMode == constant('TAX_MODE_TAX_EXCLUSION', purchaseOrderHeader) %}
                            Exclude PPn {{ purchaseOrderHeader.taxPercentage }}%
                        {% elseif purchaseOrderHeader.taxMode == constant('TAX_MODE_TAX_INCLUSION', purchaseOrderHeader) %}
                            Include PPn {{ purchaseOrderHeader.taxPercentage }}%
                        {% endif %}
                    </strong>
                </td>
                <td style="text-align: right"><strong>{{ purchaseOrderHeader.taxNominal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="7" style="text-align: right"><strong>Grand Total</strong></td>
                <td style="text-align: right"><strong>{{ purchaseOrderHeader.grandTotal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>

    <legend class="float-none w-auto text-dark px-1">Data Penerimaan</legend>
    <table class="table table-bordered table-striped">
        <thead>
            <tr class="bg-warning">
                <th>Penerimaan #</th>
                <th>Tanggal</th>
                <th>SJ #</th>
                <th>Material</th>
                <th>Quantity</th>
                <th>Satuan</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for purchaseOrderDetail in purchaseOrderHeader.purchaseOrderDetails %}
                {% for receiveDetail in purchaseOrderDetail.receiveDetails %}
                    <tr>
                        <td>{{ receiveDetail.receiveHeader.codeNumber|default }}</td>
                        <td>{{ receiveDetail.receiveHeader.transactionDate ? receiveDetail.receiveHeader.transactionDate|date('d M Y') : '' }}</td>
                        <td>{{ receiveDetail.receiveHeader.supplierDeliveryCodeNumber|default }}</td>
                        <td>{{ receiveDetail.material.name|default }}</td>
                        <td style="text-align: center">{{ receiveDetail.receivedQuantity|default }}</td>
                        <td>{{ receiveDetail.unit.name|default }}</td>
                        <td>{{ receiveDetail.isCanceled ? 'Canceled' : '' }}</td>
                    </tr>
                {% endfor %}
            {% endfor %}
        </tbody>
    </table>
        
    {#<div class="d-inline-block">{{ include('transaction/purchase_order_header/_delete_form.html.twig') }}</div>#}
    {% if purchaseOrderHeader.transactionStatus == constant('TRANSACTION_STATUS_DRAFT', purchaseOrderHeader) %}
        <div class="d-inline-block">{{ include('transaction/purchase_order_header/_reject_form.html.twig') }}</div>
        <div class="d-inline-block">{{ include('transaction/purchase_order_header/_approve_form.html.twig') }}</div>
    {% endif %}
    
    {% if purchaseOrderHeader.isOnHold == false %}
        <div class="d-inline-block">{{ include('transaction/purchase_order_header/_hold_form.html.twig') }}</div>
    {% else %}
        <div class="d-inline-block">{{ include('transaction/purchase_order_header/_release_form.html.twig') }}</div>
    {% endif %}
    
    <div class="d-inline-block"><a target="_blank" class="btn btn-info btn-sm" href="{{ path('app_transaction_purchase_order_header_memo', {'id': purchaseOrderHeader.id}) }}">Print PO</a></div>
{% endblock %}
