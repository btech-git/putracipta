{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Payment Detail' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_payment_detail_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_payment_detail_edit', {'id': purchasePaymentDetail.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Amount</th>
                <td>{{ purchasePaymentDetail.amount }}</td>
            </tr>
            <tr>
                <th>Memo</th>
                <td>{{ purchasePaymentDetail.memo }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ purchasePaymentDetail.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('transaction/purchase_payment_detail/_delete_form.html.twig') }}
{% endblock %}
