{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Payment Header' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_payment_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_payment_header_edit', {'id': purchasePaymentHeader.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Code Number Ordinal</th>
                <td>{{ purchasePaymentHeader.codeNumberOrdinal }}</td>
            </tr>
            <tr>
                <th>Code Number Month</th>
                <td>{{ purchasePaymentHeader.codeNumberMonth }}</td>
            </tr>
            <tr>
                <th>Code Number Year</th>
                <td>{{ purchasePaymentHeader.codeNumberYear }}</td>
            </tr>
            <tr>
                <th>Transaction Date</th>
                <td>{{ purchasePaymentHeader.transactionDate ? purchasePaymentHeader.transactionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchasePaymentHeader.note }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ purchasePaymentHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('transaction/purchase_payment_header/_delete_form.html.twig') }}
{% endblock %}
