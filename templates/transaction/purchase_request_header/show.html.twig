{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Request' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_request_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_request_header_edit', {'id': purchaseRequestHeader.id}) }}">Edit</a>
    <a class="btn btn-success btn-sm" href="{{ path('app_transaction_purchase_request_header_new') }}">Add</a>
{% endblock %}

{% block content %}
    <table class="table table-brequested table-striped">
        <tbody>
            <tr>
                <th>Permintaan Pembelian #</th>
                <td>{{ purchaseRequestHeader.getCodeNumber }}</td>
            </tr>
            <tr>
                <th>Tanggal Permintaan</th>
                <td>{{ purchaseRequestHeader.transactionDate ? purchaseRequestHeader.transactionDate|date('d M Y') : '' }}</td>
            </tr>
            <tr>
                <th>Gudang</th>
                <td>{{ purchaseRequestHeader.warehouse.name }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchaseRequestHeader.note }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ purchaseRequestHeader.transactionStatus }}</td>
            </tr>
            <tr>
                <th>Transaction Canceled?</th>
                <td>{{ purchaseRequestHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-brequested table-striped">
        <thead>
            <tr class="bg-info">
                <th>Kode</th>
                <th>Nama Material</th>
                <th>Quantity</th>
                <th>Satuan</th>
                <th>Tanggal Pakai</th>
                <th>Keterangan</th>
                <th>Status</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for purchaseRequestDetail in purchaseRequestHeader.purchaseRequestDetails %}
                <tr>
                    <td>{{ purchaseRequestDetail.material.code|default }}</td>
                    <td>{{ purchaseRequestDetail.material.name|default }}</td>
                    <td class="text-center">{{ purchaseRequestDetail.quantity|default|number_format(0) }}</td>
                    <td>{{ purchaseRequestDetail.unit.name|default }}</td>
                    <td>{{ purchaseRequestDetail.usageDate ? purchaseRequestDetail.usageDate|date('d M Y') : '' }}</td>
                    <td>{{ purchaseRequestDetail.memo|default }}</td>
                    <td>{{ purchaseRequestDetail.transactionStatus|default }}</td>
                    <td>{{ purchaseRequestDetail.isCanceled ? 'Canceled' : '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" class="text-end"><strong>Total</strong></td>
                <td class="text-center"><strong>{{ purchaseRequestHeader.totalQuantity|default }}</strong></td>
                <td colspan="5"></td>
            </tr>
        </tfoot>
    </table>
                
    <ul class="nav nav-tabs" id="purchase-order-receive-tab" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="purchase-order-header-tab" data-bs-toggle="tab" data-bs-target="#purchase-order-header-tab-pane" type="button" role="tab" aria-controls="purchase-order-header-tab-pane" aria-selected="true">Purchase Order</button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="receive-header-tab" data-bs-toggle="tab" data-bs-target="#receive-header-tab-pane" type="button" role="tab" aria-controls="receive-header-tab-pane" aria-selected="false">Penerimaan</button>
        </li>
    </ul>
    <div class="tab-content" id="purchase-order-receive-tab-content">
        <div class="tab-pane fade show active" id="purchase-order-header-tab-pane" role="tabpanel" aria-labelledby="purchase-order-header-tab" tabindex="0">
            <legend class="float-none w-auto text-dark px-1">Data Order Pembelian</legend>
            <table class="table table-bordered table-striped">
                <thead>
                    <tr class="bg-warning">
                        <th>PO #</th>
                        <th>Tanggal</th>
                        <th>Material</th>
                        <th>Quantity</th>
                        <th>Satuan</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    {% for purchaseRequestDetail in purchaseRequestHeader.purchaseRequestDetails %}
                        <tr>
                            <td>{{ purchaseRequestDetail.purchaseOrderDetail.purchaseOrderHeader.codeNumber|default }}</td>
                            <td>{{ purchaseRequestDetail.purchaseOrderDetail.purchaseOrderHeader.transactionDate|default ? purchaseRequestDetail.purchaseOrderDetail.purchaseOrderHeader.transactionDate|date('d M Y') : '' }}</td>
                            <td>{{ purchaseRequestDetail.purchaseOrderDetail.material.name|default }}</td>
                            <td class="text-center">{{ purchaseRequestDetail.purchaseOrderDetail.quantity|default|number_format(0) }}</td>
                            <td>{{ purchaseRequestDetail.purchaseOrderDetail.unit.name|default }}</td>
                            <td>{{ purchaseRequestDetail.purchaseOrderDetail.isCanceled|default ? 'Canceled' : '' }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>
        <div class="tab-pane fade" id="receive-header-tab-pane" role="tabpanel" aria-labelledby="receive-header-tab" tabindex="0">
            {% set showReceive = purchaseRequestHeader.purchaseRequestDetails|map(purchaseRequestDetail => purchaseRequestDetail.purchaseOrderDetail is not null)|reduce((a, b) => a or b, false) %}
            {% if showReceive %}
                <legend class="float-none w-auto text-dark px-1">Data Penerimaan</legend>
                <table class="table table-bordered table-striped">
                    <thead>
                        <tr class="bg-primary">
                            <th>Penerimaan #</th>
                            <th>Tanggal</th>
                            <th>Material</th>
                            <th>Quantity</th>
                            <th>Satuan</th>
                            <th></th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for purchaseRequestDetail in purchaseRequestHeader.purchaseRequestDetails %}
                            {% if purchaseRequestDetail.purchaseOrderDetail is not null %}
                                {% for receiveDetail in purchaseRequestDetail.purchaseOrderDetail.receiveDetails %}
                                    <tr>
                                        <td>{{ receiveDetail.receiveHeader.codeNumber|default }}</td>
                                        <td>{{ receiveDetail.receiveHeader.transactionDate|default ? receiveDetail.receiveHeader.transactionDate|date('d M Y') : '' }}</td>
                                        <td>{{ receiveDetail.material.name|default }}</td>
                                        <td class="text-center">{{ receiveDetail.quantity|default|number_format(0) }}</td>
                                        <td>{{ receiveDetail.unit.name|default }}</td>
                                        <td>{{ receiveDetail.isCanceled|default ? 'Canceled' : '' }}</td>
                                    </tr>
                                {% endfor %}
                            {% endif %}
                        {% endfor %}
                    </tbody>
                </table>
            {% endif %}
        </div>
    </div>
       
    {#{{ include('transaction/purchase_request_header/_delete_form.html.twig') }}#}
    {% if purchaseRequestHeader.transactionStatus == constant('TRANSACTION_STATUS_DRAFT', purchaseRequestHeader) or purchaseRequestHeader.transactionStatus == constant('TRANSACTION_STATUS_HOLD', purchaseRequestHeader) %}
        <div class="d-inline-block">{{ include('transaction/purchase_request_header/_reject_form.html.twig') }}</div>
        <div class="d-inline-block">{{ include('transaction/purchase_request_header/_approve_form.html.twig') }}</div>
    {% endif %}
    <div class="d-inline-block"><a target="_blank" class="btn btn-info btn-sm" href="{{ path('app_transaction_purchase_request_header_memo', {'id': purchaseRequestHeader.id}) }}">Print Request</a></div>
{% endblock %}
