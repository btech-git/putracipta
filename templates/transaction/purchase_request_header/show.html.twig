{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Request Header' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_request_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_request_header_edit', {'id': purchaseRequestHeader.id}) }}">Edit</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Total Quantity</th>
                <td>{{ purchaseRequestHeader.totalQuantity }}</td>
            </tr>
            <tr>
                <th>Is Canceled</th>
                <td>{{ purchaseRequestHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Code Number Ordinal</th>
                <td>{{ purchaseRequestHeader.codeNumberOrdinal }}</td>
            </tr>
            <tr>
                <th>Code Number Month</th>
                <td>{{ purchaseRequestHeader.codeNumberMonth }}</td>
            </tr>
            <tr>
                <th>Code Number Year</th>
                <td>{{ purchaseRequestHeader.codeNumberYear }}</td>
            </tr>
            <tr>
                <th>Created Transaction Date Time</th>
                <td>{{ purchaseRequestHeader.createdTransactionDateTime ? purchaseRequestHeader.createdTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Modified Transaction Date Time</th>
                <td>{{ purchaseRequestHeader.modifiedTransactionDateTime ? purchaseRequestHeader.modifiedTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Approved Transaction Date Time</th>
                <td>{{ purchaseRequestHeader.approvedTransactionDateTime ? purchaseRequestHeader.approvedTransactionDateTime|date('Y-m-d H:i:s') : '' }}</td>
            </tr>
            <tr>
                <th>Transaction Date</th>
                <td>{{ purchaseRequestHeader.transactionDate ? purchaseRequestHeader.transactionDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchaseRequestHeader.note }}</td>
            </tr>
        </tbody>
    </table>

    {{ include('transaction/purchase_request_header/_delete_form.html.twig') }}
{% endblock %}
