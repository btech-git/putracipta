<table class="table table-bordered"
       data-controller="form-collection"
       data-form-collection-start-index-value="{{ form.purchaseRequestPaperDetails|length > 0 ? form.purchaseRequestPaperDetails|last.vars.name + 1 : 0 }}"
       data-form-collection-prototype-value="{{ _self.collection_item(form.purchaseRequestPaperDetails.vars.prototype)|e('html_attr') }}"
       data-action="form-collection:collection-item-removed->json-loader#load:self">
    <thead class="table-secondary">
        <tr>
            <th class="d-none">Paper Id</th>
            <th style="min-width: 150px">Kode</th>
            <th style="min-width: 150px">Paper Name</th>
            <th style="min-width: 50px">P</th>
            <th style="min-width: 50px">L</th>
            <th style="min-width: 50px">GSM</th>
            <th style="min-width: 50px">Qty</th>
            <th style="min-width: 100px">Satuan</th>
            <th style="min-width: 100px">Tanggal Pakai</th>
            <th style="min-width: 200px">Keterangan</th>
            <th style="min-width: 0"></th>
        </tr>
    </thead>
    <tbody data-form-collection-target="items" data-action="paper-table:data-table:select@document->form-collection#addCollectionItem">
        {% macro collection_item(detailForm) %}
            <tr data-form-collection-target="item" data-item-identifier-name="paperId" data-item-identifier-value="{{ detailForm.vars.value.paper.id|default }}" {% if (detailForm.vars.value.isCanceled) %}class="bg-secondary"{% endif %}>
                <td class="d-none">{{ form_widget(detailForm.paper, {'attr': {'data-item-field-name': 'paperId'}}) }}</td>
                <td data-item-field-name="paperCode">{{ detailForm.vars.value.paper.code|default }}</td>
                <td data-item-field-name="paperName">{{ detailForm.vars.value.paper.name|default }}</td>
                <td data-item-field-name="paperLength">{{ detailForm.vars.value.paper.length|default }}</td>
                <td data-item-field-name="paperWidth">{{ detailForm.vars.value.paper.width|default }}</td>
                <td data-item-field-name="paperWeight">{{ detailForm.vars.value.paper.weight|default }}</td>
                <td>{{ form_row(detailForm.quantity, {'label': false, 'attr': {'data-action': 'change->json-loader#load'}}) }}</td>
                <td>{{ form_row(detailForm.unit, {'label': false}) }}</td>
                <td>{{ form_row(detailForm.usageDate, {'label': false, 'attr': {'data-controller': 'flatpickr-element'}}) }}</td>
                <td>{{ form_row(detailForm.memo, {'label': false}) }}</td>
                <td>
                    {% if (detailForm.vars.value.id == null) %}
                        <button type="button" class="btn btn-outline-dark" data-action="form-collection#removeCollectionItem"><i class="bi-x-lg"></i></button>
                    {% endif %}
                    <div {% if (detailForm.vars.value.id == null) %}class="d-none"{% endif %}>
                        {{ form_row(detailForm.isCanceled, {
                            'label': 'X',
                            'attr': {
                                'data-controller': 'dom-element',
                                'data-action': 'dom-element#bind change->json-loader#load',
                                'data-dom-element-bind-specifications-param': [
                                    {'destinationsTarget': "table tr[data-item-identifier-value=\"#{detailForm.vars.value.paper.id|default}\"]", 'action': 'removeClass', 'descriptor': {'name': 'bg-secondary'}, 'condition': '!$element.checked'},
                                    {'destinationsTarget': "table tr[data-item-identifier-value=\"#{detailForm.vars.value.paper.id|default}\"]", 'action': 'addClass', 'descriptor': {'name': 'bg-secondary'}, 'condition': '$element.checked'},
                                ]|json_encode,
                            },
                        }) }}
                    </div>
                </td>
            </tr>
        {% endmacro %}
        {% for detailForm in form.purchaseRequestPaperDetails %}
            {{ _self.collection_item(detailForm) }}
        {% endfor %}
    </tbody>
    <tfoot>
        <tr>
            <td class="text-end" colspan="5">Total Quantity</td>
            <td class="text-end" data-json-loader-target="placeholder"
                data-property-path="totalQuantity">
                {{ purchaseRequestPaperHeader.totalQuantity|default|number_format(0) }}
            </td>
            <td></td>
        </tr>
    </tfoot>
</table>
