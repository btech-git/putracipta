{% extends 'layout_page.html.twig' %}

{% block title 'Show Purchase Request Kertas' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_purchase_request_paper_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_purchase_request_paper_header_edit', {'id': purchaseRequestPaperHeader.id}) }}">Edit</a>
    <a class="btn btn-success btn-sm" href="{{ path('app_transaction_purchase_request_paper_header_new') }}">Add</a>
{% endblock %}

{% block content %}
    <table class="table table-brequested table-striped">
        <tbody>
            <tr>
                <th>Permintaan Pembelian #</th>
                <td>{{ purchaseRequestPaperHeader.getCodeNumber }}</td>
            </tr>
            <tr>
                <th>Tanggal</th>
                <td>{{ purchaseRequestPaperHeader.transactionDate ? purchaseRequestPaperHeader.transactionDate|date('d M Y') : '' }}</td>
            </tr>
            <tr>
                <th>Gudang</th>
                <td>{{ purchaseRequestPaperHeader.warehouse.name }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ purchaseRequestPaperHeader.note }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ purchaseRequestPaperHeader.transactionStatus }}</td>
            </tr>
            <tr>
                <th>Transaction Canceled?</th>
                <td>{{ purchaseRequestPaperHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-brequested table-striped">
        <thead>
            <tr class="bg-info">
                <th>Kode</th>
                <th>Nama Kertas</th>
                <th>Quantity</th>
                <th>Satuan</th>
                <th>Tanggal Pakai</th>
                <th>Keterangan</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for purchaseRequestPaperDetail in purchaseRequestPaperHeader.purchaseRequestPaperDetails %}
                <tr>
                    <td>{{ purchaseRequestPaperDetail.paper.code|default }}</td>
                    <td>{{ purchaseRequestPaperDetail.paper.paperNameSizeCombination|default }}</td>
                    <td style="text-align: center">{{ purchaseRequestPaperDetail.quantity|default|number_format(0) }}</td>
                    <td>{{ purchaseRequestPaperDetail.unit.name|default }}</td>
                    <td>{{ purchaseRequestPaperDetail.usageDate ? purchaseRequestPaperDetail.usageDate|date('d M Y') : '' }}</td>
                    <td>{{ purchaseRequestPaperDetail.memo|default }}</td>
                    <td>{{ purchaseRequestPaperDetail.isCanceled ? 'Canceled' : '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="2" style="text-align: right"><strong>Total</strong></td>
                <td style="text-align: center"><strong>{{ purchaseRequestPaperHeader.totalQuantity|default }}</strong></td>
                <td colspan="4"></td>
            </tr>
        </tfoot>
    </table>
    
    {#{{ include('transaction/purchase_request_paper_header/_delete_form.html.twig') }}#}
    {% if purchaseRequestPaperHeader.transactionStatus == constant('TRANSACTION_STATUS_DRAFT', purchaseRequestPaperHeader) or purchaseRequestPaperHeader.transactionStatus == constant('TRANSACTION_STATUS_HOLD', purchaseRequestPaperHeader) %}
        <div class="d-inline-block">{{ include('transaction/purchase_request_paper_header/_reject_form.html.twig') }}</div>
        <div class="d-inline-block">{{ include('transaction/purchase_request_paper_header/_approve_form.html.twig') }}</div>
    {% endif %}
    <div class="d-inline-block"><a target="_blank" class="btn btn-info btn-sm" href="{{ path('app_transaction_purchase_request_paper_header_memo', {'id': purchaseRequestPaperHeader.id}) }}">Print Request</a></div>
{% endblock %}
