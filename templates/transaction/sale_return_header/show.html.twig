{% extends 'layout_page.html.twig' %}

{% block title 'Show Sale Return' %}

{% block toolbar %}
    <a class="btn btn-primary btn-sm" href="{{ path('app_transaction_sale_return_header_index') }}">Manage</a>
    <a class="btn btn-warning btn-sm" href="{{ path('app_transaction_sale_return_header_edit', {'id': saleReturnHeader.id}) }}">Edit</a>
    <a class="btn btn-success btn-sm" href="{{ path('app_transaction_sale_return_header_new') }}">Add</a>
{% endblock %}

{% block content %}
    <table class="table table-bordered table-striped">
        <tbody>
            <tr>
                <th>Return #</th>
                <td>{{ saleReturnHeader.getCodeNumber }}</td>
            </tr>
            <tr>
                <th>Tanggal Return</th>
                <td>{{ saleReturnHeader.transactionDate ? saleReturnHeader.transactionDate|date('d M Y') : '' }}</td>
            </tr>
            <tr>
                <th>Pengiriman #</th>
                <td>{{ saleReturnHeader.deliveryHeader.getCodeNumber }}</td>
            </tr>
            <tr>
                <th>Tanggal Kirim</th>
                <td>{{ saleReturnHeader.deliveryHeader.transactionDate ? saleReturnHeader.deliveryHeader.transactionDate|date('d M Y') : '' }}</td>
            </tr>
            <tr>
                <th>Supplier</th>
                <td>{{ saleReturnHeader.customer.company }}</td>
            </tr>
            <tr>
                <th>Gudang</th>
                <td>{{ saleReturnHeader.warehouse.name|default }}</td>
            </tr>
            <tr>
                <th>Note</th>
                <td>{{ saleReturnHeader.note }}</td>
            </tr>
            <tr>
                <th>Transaction Canceled?</th>
                <td>{{ saleReturnHeader.isCanceled ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <table class="table table-bordered table-striped">
        <thead>
            <tr class="bg-info">
                <th>PO #</th>
                <th>Item Code</th>
                <th>Description</th>
                <th>Quantity</th>
                <th>Satuan</th>
                <th>Harga</th>
                <th>Total</th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            {% for saleReturnDetail in saleReturnHeader.saleReturnDetails %}
                <tr>
                    <td>{{ saleReturnDetail.deliveryDetail.saleOrderDetail.saleOrderHeader.referenceNumber|default }}</td>
                    <td>{{ saleReturnDetail.product.code|default }}</td>
                    <td>{{ saleReturnDetail.product.name|default }}</td>
                    <td style="text-align: right">{{ saleReturnDetail.quantity|default }}</td>
                    <td>{{ saleReturnDetail.unit.name|default }}</td>
                    <td style="text-align: right">{{ saleReturnDetail.unitPrice|default|number_format(2) }}</td>
                    <td style="text-align: right">{{ saleReturnDetail.total|default|number_format(2) }}</td>
                    <td>{{ saleReturnDetail.isCanceled ? 'Canceled' : '' }}</td>
                </tr>
            {% endfor %}
        </tbody>
        <tfoot>
            <tr>
                <td colspan="6" style="text-align: right"><strong>Sub Total</strong></td>
                <td style="text-align: right"><strong>{{ saleReturnHeader.subTotal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="6" style="text-align: right">
                    <strong>
                        {% if saleReturnHeader.taxMode == constant('TAX_MODE_NON_TAX', saleReturnHeader) %}
                            Non PPn 0%
                        {% elseif saleReturnHeader.taxMode == constant('TAX_MODE_TAX_EXCLUSION', saleReturnHeader) %}
                            PPn {{ saleReturnHeader.taxPercentage }}%
                        {% elseif saleReturnHeader.taxMode == constant('TAX_MODE_TAX_INCLUSION', saleReturnHeader) %}
                            Include PPn {{ saleReturnHeader.taxPercentage }}%
                        {% endif %}
                    </strong>
                </td>
                <td style="text-align: right"><strong>{{ saleReturnHeader.taxNominal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
            <tr>
                <td colspan="6" style="text-align: right"><strong>Grand Total</strong></td>
                <td style="text-align: right"><strong>{{ saleReturnHeader.grandTotal|default|number_format(2) }}</strong></td>
                <td></td>
            </tr>
        </tfoot>
    </table>
                
    {#{{ include('transaction/sale_return_header/_delete_form.html.twig') }}#}
{% endblock %}
